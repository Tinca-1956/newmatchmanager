
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isClubAdmin(clubId) {
      let user = getUserData();
      return isSignedIn() && (user.role == 'Club Admin' && user.primaryClubId == clubId);
    }
    
    function isSiteAdmin() {
      let user = getUserData();
      return isSignedIn() && user.role == 'Site Admin';
    }

    function isMember(clubId) {
      let user = getUserData();
      return isSignedIn() && (isSiteAdmin() || (user.primaryClubId == clubId && (user.role == 'Club Admin' || user.role == 'Angler')));
    }

    // Rules for collections
    
    match /users/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && request.auth.uid == userId;
      // Admins can manage users in their club
      allow write: if isSiteAdmin() || isClubAdmin(resource.data.primaryClubId);
    }

    match /clubs/{clubId} {
      allow read: if isSignedIn();
      allow create, delete: if isSiteAdmin();
      allow update: if isSiteAdmin() || isClubAdmin(clubId);
    }
    
    match /series/{seriesId} {
      allow read: if isMember(resource.data.clubId);
      allow write: if isSiteAdmin() || isClubAdmin(resource.data.clubId);
    }

    match /matches/{matchId} {
      allow read: if isMember(resource.data.clubId);
      // Allow any signed-in user to register (arrayUnion) if they are a member.
      // Other writes are restricted to admins.
      allow update: if isSiteAdmin() || isClubAdmin(resource.data.clubId) || 
                     (isMember(resource.data.clubId) && request.resource.data.keys().hasOnly(['registeredAnglers', 'registeredCount']));
      allow create, delete: if isSiteAdmin() || isClubAdmin(resource.data.clubId);
    }

    match /results/{resultId} {
      allow read: if isMember(resource.data.clubId);
      allow write: if isSiteAdmin() || isClubAdmin(resource.data.clubId);
    }
    
    match /Standard_Texts/{textId} {
      allow read: if isMember(resource.data.clubId);
      allow write: if isSiteAdmin() || isClubAdmin(resource.data.clubId);
    }

    match /tags/{tagId} {
      allow read, write: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId) || isClubAdmin(resource.data.clubId);
    }
    
    // Blog and Comments
    match /blogs/{blogId} {
      allow read: if isMember(resource.data.clubId);
      allow write: if isSiteAdmin() || isClubAdmin(resource.data.clubId);

      match /comments/{commentId} {
        allow read: if isMember(get(/databases/$(database)/documents/blogs/$(blogId)).data.clubId);
        allow create: if isMember(get(/databases/$(database)/documents/blogs/$(blogId)).data.clubId);
        allow delete: if isSiteAdmin() || 
                       isClubAdmin(get(/databases/$(database)/documents/blogs/$(blogId)).data.clubId) ||
                       (isSignedIn() && request.auth.uid == resource.data.authorId);
      }
    }

    // Match Reviews and Comments
    match /matchReviews/{matchId} {
      allow read: if isMember(get(/databases/$(database)/documents/matches/$(matchId)).data.clubId);
      allow write: if isSiteAdmin() || isClubAdmin(get(/databases/$(database)/documents/matches/$(matchId)).data.clubId);
      
      match /comments/{commentId} {
         allow read: if isMember(get(/databases/$(database)/documents/matches/$(matchId)).data.clubId);
         allow create: if isMember(get(/databases/$(database)/documents/matches/$(matchId)).data.clubId);
         allow delete: if isSiteAdmin() || 
                        isClubAdmin(get(/databases/$(database)/documents/matches/$(matchId)).data.clubId) ||
                        (isSignedIn() && request.auth.uid == resource.data.authorId);
      }
    }
    
    // Notifications
    match /notifications/{notificationId} {
        allow read, write: if isSignedIn() && request.auth.uid == resource.data.userId;
    }
    
    // Public collections
    match /publicMatches/{matchId} {
      allow read: if true;
      // Only backend processes should write here, secured by admin role check for safety
      allow write: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId);
    }

    match /publicUpcomingMatches/{matchId} {
      allow read: if true;
      allow write: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId);
    }

    match /publicBlogPosts/{postId} {
      allow read: if true;
      allow write: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId);
    }
  }
}
