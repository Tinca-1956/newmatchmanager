rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isUserAuthenticated() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isSiteAdmin() {
      return isUserAuthenticated() && getUserData().role == 'Site Admin';
    }

    function isClubAdmin() {
      return isUserAuthenticated() && getUserData().role == 'Club Admin';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      allow read: if isUserAuthenticated();
      allow create: if isUserAuthenticated();
      allow update: if isUserAuthenticated() && (request.auth.uid == userId || isSiteAdmin());
      allow delete: if isSiteAdmin();
    }
    
    // Rules for the 'clubs' collection
    match /clubs/{clubId} {
      allow read: if isUserAuthenticated();
      allow create: if isSiteAdmin();
      allow update: if isUserAuthenticated() && 
                     (isSiteAdmin() || (isClubAdmin() && getUserData().primaryClubId == clubId));
      allow delete: if isSiteAdmin();
    }
    
    // Rules for the 'series' collection
    match /series/{seriesId} {
        allow read: if isUserAuthenticated();
        allow create, update, delete: if isSiteAdmin() || isClubAdmin();
    }

    // Rules for the 'matches' collection
    match /matches/{matchId} {
      allow read: if isUserAuthenticated();
      allow create, update: if isSiteAdmin() || isClubAdmin();
      allow delete: if isSiteAdmin();
    }
    
    // Rules for the 'results' collection
    match /results/{resultId} {
        allow read: if isUserAuthenticated();
        allow create, update, delete: if isSiteAdmin() || isClubAdmin();
    }

    // Public collections are readable by anyone, but writable only by admins
    match /publicMatches/{matchId} {
      allow read: if true;
      allow write: if isSiteAdmin() || isClubAdmin();
    }

    match /publicUpcomingMatches/{matchId} {
        allow read: if true;
        allow write: if isSite-Admin() || isClubAdmin();
    }

    // Allow site admins to manage help documents
    match /helpDocuments/{docId} {
        allow read: if isUserAuthenticated();
        allow create, delete: if isSiteAdmin();
    }

    // Allow Club Admins to read members of their own club
    match /databases/{database}/documents {
      match /users/{userId} {
        allow list: if isClubAdmin() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.primaryClubId;
      }
    }
  }
}
