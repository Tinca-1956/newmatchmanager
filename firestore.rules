rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isSiteAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }

    function isClubAdmin(clubId) {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return userDoc.role == 'Club Admin' && userDoc.primaryClubId == clubId;
    }
    
    function isClubMember(clubId) {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == clubId;
    }

    // Rules for collections
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if request.auth.uid == userId || isSiteAdmin();
    }

    match /clubs/{clubId} {
      allow read: if isSignedIn();
      allow write: if isSiteAdmin() || isClubAdmin(clubId);
    }

    match /series/{seriesId} {
      allow read: if isSignedIn();
      allow write: if isSiteAdmin() || isClubAdmin(resource.data.clubId);
    }
    
    match /matches/{matchId} {
      allow read: if isSignedIn();
      allow write: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId);
    }

    match /results/{resultId} {
        allow read: if isSignedIn();
        allow write: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId);
    }

    match /Standard_Texts/{textId} {
      allow read: if isSiteAdmin() || isClubAdmin(resource.data.clubId);
      allow write: if isSiteAdmin() || isClubAdmin(resource.data.clubId);
    }

    match /publicMatches/{matchId} {
        allow read: true;
        allow write: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId);
    }
    
    match /publicUpcomingMatches/{matchId} {
        allow read: true;
        allow write: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId);
    }

    match /blogs/{postId} {
      allow read: if isSignedIn();
      allow write: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId);
      
      match /comments/{commentId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn();
      }
    }

    match /matchReviews/{reviewId} {
      allow read: if isSignedIn();
      allow write: if isSiteAdmin() || isClubAdmin(resource.data.clubId);

      match /comments/{commentId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn();
      }
    }
    
    match /notifications/{notificationId} {
      allow read, update: if request.auth.uid == resource.data.userId;
      allow create: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId) || isSignedIn();
      allow delete: if isSiteAdmin();
    }
    
     match /tags/{tagId} {
      allow read: if isSignedIn();
      allow write: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId);
    }
  }
}
