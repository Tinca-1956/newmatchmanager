rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function getUserData(userId) {
      // It's safer to check for existence before accessing data
      return getAfter(/databases/$(database)/documents/users/$(userId));
    }

    function isUserRole(userId, role) {
      // Check for existence and then the role
      let userDoc = getUserData(userId);
      return userDoc != null && userDoc.data.role == role;
    }
    
    function isUserClubAdmin(userId, clubId) {
      let userDoc = getUserData(userId);
      return userDoc != null && 
             userDoc.data.role == 'Club Admin' && 
             userDoc.data.primaryClubId == clubId;
    }

    match /users/{userId} {
      allow read: if request.auth.uid == userId || isUserRole(request.auth.uid, 'Site Admin');
      allow update: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
      // Allow admins to change roles/status
      allow write: if isUserRole(request.auth.uid, 'Site Admin') || isUserClubAdmin(request.auth.uid, resource.data.primaryClubId);
    }

    match /clubs/{clubId} {
      allow read: if request.auth != null;
      allow write: if isUserRole(request.auth.uid, 'Site Admin');
    }

    match /series/{seriesId} {
      allow read: if request.auth != null;
      // Allow write if the user is a Site Admin OR a Club Admin of the club specified in the new/updated series document
      allow write: if isUserRole(request.auth.uid, 'Site Admin') || isUserClubAdmin(request.auth.uid, request.resource.data.clubId);
    }

    match /matches/{matchId} {
      allow read: if request.auth != null;
      // Corrected write rule for matches
      allow write: if isUserRole(request.auth.uid, 'Site Admin') || isUserClubAdmin(request.auth.uid, request.resource.data.clubId);
    }
    
    match /results/{resultId} {
      allow read: if request.auth != null;
      // Corrected write rule for results
      allow write: if isUserRole(request.auth.uid, 'Site Admin') || isUserClubAdmin(request.auth.uid, request.resource.data.clubId);
    }
  }
}
