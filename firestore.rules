rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper Functions
    function isSiteAdmin() {
      return request.auth.token.role == 'Site Admin';
    }
    
    function isClubAdmin() {
      return request.auth.token.role == 'Club Admin';
    }

    function isMarshal() {
        return request.auth.token.role == 'Marshal';
    }
    
    function isClubAdminOf(clubId) {
      return isClubAdmin() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == clubId;
    }
    
    function isSignedIn() {
      return request.auth != null;
    }

    // Collection Rules
    
    match /users/{userId} {
      allow read: if isSiteAdmin() || (isSignedIn() && request.auth.uid == userId);
      allow create: if isSignedIn();
      allow update: if isSiteAdmin() || isClubAdmin() || (isSignedIn() && request.auth.uid == userId);
      allow delete: if isSiteAdmin();
    }
    
    match /clubs/{clubId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSiteAdmin();
    }
    
    match /series/{seriesId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSiteAdmin() || isClubAdminOf(resource.data.clubId);
    }
    
    match /matches/{matchId} {
        allow read: if isSiteAdmin() || isClubAdmin() || isSignedIn();
        allow create, update, delete: if isSiteAdmin() || isClubAdminOf(resource.data.clubId);
    }

    match /results/{resultId} {
      allow read: if isSignedIn();
      allow create, update: if isSiteAdmin() || isClubAdmin() || isMarshal();
      allow delete: if isSiteAdmin();
    }

    match /applications/{applicationId} {
      allow read: if isSiteAdmin() || isClubAdminOf(resource.data.clubId);
      allow create: if isSignedIn();
      allow delete: if isSiteAdmin() || isClubAdminOf(resource.data.clubId);
    }
    
     match /memberships/{membershipId} {
      allow read: if isSiteAdmin() || isClubAdminOf(resource.data.clubId);
      allow create, delete: if isSiteAdmin() || isClubAdminOf(resource.data.clubId);
      allow update: if isSiteAdmin() || isClubAdminOf(resource.data.clubId);
    }
  }
}
