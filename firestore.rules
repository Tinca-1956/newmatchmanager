rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default-deny all access
    match /{document=**} {
      allow read, write: if false;
    }
    
    // PUBLIC-ACCESS: Open read access for these collections
    match /publicMatches/{matchId} {
      allow read: if true;
    }
    match /publicUpcomingMatches/{matchId} {
      allow read: if true;
    }
    
    // AUTHENTICATED-ACCESS: Open read/write for any signed-in user
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    match /clubs/{clubId} {
       allow read, write: if request.auth != null;
    }
    match /series/{seriesId} {
       allow read, write: if request.auth != null;
    }
    match /matches/{matchId} {
      allow read, write: if request.auth != null;
    }
    match /results/{resultId} {
       allow read, write: if request.auth != null;
    }
    match /Standard_Texts/{textId} {
       allow read, write: if request.auth != null;
    }
     match /helpDocuments/{docId} {
      allow read: if request.auth != null;
      allow write: if false; // Keep writes restricted
    }
  }
}
