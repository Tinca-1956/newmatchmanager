
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAuth() {
      return request.auth != null;
    }
    
    function isAuthOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read: if isAuth();
      allow create: if isAuthOwner(userId);
      allow update: if isAuthOwner(userId);
      allow delete: if resource.data.role == 'Site Admin';
    }

    match /clubs/{clubId} {
      allow read: if isAuth();
      allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }

    match /series/{seriesId} {
      allow read: if isAuth();
      allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
    }

    match /matches/{matchId} {
      allow read: if isAuth();
      allow create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
      allow update: if isAuth(); // Simplified rule to allow updates by any authenticated user
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }

    match /results/{resultId} {
      allow read: if isAuth();
      allow create, update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }
    
    match /helpDocuments/{docId} {
        allow read: if isAuth();
        allow create, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }
    
    match /publicMatches/{matchId} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
    }
    
    match /publicUpcomingMatches/{matchId} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
    }
  }
}
