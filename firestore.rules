rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions to check user's role from custom claims
    function isSiteAdmin() {
      return request.auth.token.role == 'Site Admin';
    }

    function isClubAdmin() {
      return request.auth.token.role == 'Club Admin';
    }
    
    function isAngler() {
       return request.auth.token.role == 'Angler';
    }

    function isOwnClub(clubId) {
      return request.auth.token.primaryClubId == clubId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId; // Allow users to create their own profile
      allow update: if request.auth.uid == userId || isSiteAdmin() || (isClubAdmin() && resource.data.primaryClubId == request.auth.token.primaryClubId);
      allow delete: if isSiteAdmin();
    }

    // Rules for the 'clubs' collection
    match /clubs/{clubId} {
      allow read: if request.auth != null;
      allow create, update: if isSiteAdmin();
      allow delete: if isSiteAdmin();
    }

    // Rules for the 'series' collection
    match /series/{seriesId} {
      allow read: if request.auth != null;
      allow create, update: if isSiteAdmin() || (isClubAdmin() && isOwnClub(request.resource.data.clubId));
      allow delete: if isSiteAdmin() || (isClubAdmin() && isOwnClub(resource.data.clubId));
    }
    
    // Rules for the 'matches' collection
    match /matches/{matchId} {
      allow read: if request.auth != null;
      // Allow create/update if Site Admin, OR if Club Admin of the correct club
      allow create, update: if isSiteAdmin() || (isClubAdmin() && isOwnClub(request.resource.data.clubId));
      allow delete: if isSiteAdmin();
    }
    
    // Rules for the 'results' collection
    match /results/{resultId} {
      allow read: if request.auth != null;
       // Allow create/update if Site Admin, OR if Club Admin of the correct club
      allow create, update: if isSiteAdmin() || (isClubAdmin() && isOwnClub(request.resource.data.clubId));
      allow delete: if isSiteAdmin();
    }
    
    // Rules for the public collections
    match /publicMatches/{matchId} {
        allow read: if true;
        // Writes should be controlled by backend logic (e.g. Cloud Functions)
        allow write: if false; 
    }
    
    match /publicUpcomingMatches/{matchId} {
        allow read: if true;
        // Writes should be controlled by backend logic (e.g. Cloud Functions)
        allow write: if false;
    }
    
    match /helpDocuments/{docId} {
        allow read: if true;
        allow write: if isSiteAdmin();
    }
  }
}