rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSiteAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }

    function isClubAdmin(clubId) {
        let userProfile = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
        return userProfile.role == 'Club Admin' && userProfile.primaryClubId == clubId;
    }
    
    function isMemberOfClub(clubId) {
        let userProfile = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
        return userProfile.primaryClubId == clubId;
    }

    // Public collections can be read by anyone, but not written to by clients.
    match /publicUpcomingMatches/{matchId} {
        allow read: if true;
        allow write: if false; // Can only be written by backend functions
    }
    
    match /publicMatches/{matchId} {
        allow read: if true;
        allow write: if false; // Can only be written by backend functions
    }

    // Secured collections
    match /users/{userId} {
      allow read: if isSiteAdmin() || request.auth.uid == userId;
      allow create: if request.auth != null; // Any authenticated user can create their own profile.
      allow update: if request.auth.uid == userId || isSiteAdmin();
      allow delete: if isSiteAdmin();
    }
    
    match /clubs/{clubId} {
      allow read: if request.auth != null; // All authenticated users can see clubs
      allow create, update, delete: if isSiteAdmin();
    }

    match /series/{seriesId} {
        allow read: if request.auth != null; // All authenticated users can see series
        allow write: if isSiteAdmin() || isClubAdmin(resource.data.clubId);
    }
    
    match /matches/{matchId} {
        allow read: if request.auth != null;
        allow create, update, delete: if isSiteAdmin() || isClubAdmin(resource.data.clubId);
    }
    
    match /results/{resultId} {
        allow read: if request.auth != null;
        allow write: if isSiteAdmin() || isClubAdmin(resource.data.clubId);
    }
  }
}
