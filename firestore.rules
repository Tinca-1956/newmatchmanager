rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is signed in
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to get the requesting user's data
    function getRequestingUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Helper function to check for admin roles
    function isSiteAdmin() {
      return getRequestingUserData().role == 'Site Admin';
    }
    
    function isClubAdmin() {
      return getRequestingUserData().role == 'Club Admin';
    }
    
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if request.auth.uid == userId || isSiteAdmin() || isClubAdmin();
    }
    
    match /clubs/{clubId} {
      allow read: if isSignedIn();
      allow create: if isSiteAdmin() || isClubAdmin();
      allow update: if isSiteAdmin() || isClubAdmin();
      allow delete: if isSiteAdmin();
    }
    
    match /series/{seriesId} {
        allow read: if isSignedIn() && getRequestingUserData().primaryClubId == resource.data.clubId;
        allow create, update: if isSiteAdmin() || (isClubAdmin() && getRequestingUserData().primaryClubId == request.resource.data.clubId);
        allow delete: if isSiteAdmin() || (isClubAdmin() && getRequestingUserData().primaryClubId == resource.data.clubId);
    }

    match /matches/{matchId} {
        allow read: if isSignedIn() && getRequestingUserData().primaryClubId == resource.data.clubId;
        allow create: if isSiteAdmin() || (isClubAdmin() && getRequestingUserData().primaryClubId == request.resource.data.clubId);
        allow update: if isSiteAdmin() || isClubAdmin();
    }
  }
}
