
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper Functions
    function isAuth() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    
    function isSiteAdmin() {
      return isAuth() && getUserData(request.auth.uid).role == 'Site Admin';
    }
    
    function isClubAdmin(clubId) {
        let userProfile = getUserData(request.auth.uid);
        return isAuth() && userProfile.role == 'Club Admin' && userProfile.primaryClubId == clubId;
    }
    
    // USERS
    match /users/{userId} {
      allow read: if isAuth();
      allow write: if isUser(userId) || isSiteAdmin() || isClubAdmin(request.resource.data.primaryClubId);
    }
    
    // CLUBS
    match /clubs/{clubId} {
      allow read: if isAuth();
      allow update: if isSiteAdmin() || (isClubAdmin(clubId) && request.resource.data.keys().hasOnly(['description', 'imageUrl']));
      allow create, delete: if isSiteAdmin();
    }
    
    // SERIES
    match /series/{seriesId} {
      allow read: if isAuth();
      allow write: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId);
    }

    // MATCHES
    match /matches/{matchId} {
        allow read: if isAuth();
        allow create: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId);
        allow update: if isAuth() && (isSiteAdmin() || isClubAdmin(resource.data.clubId));
        allow delete: if isSiteAdmin() || (isClubAdmin(resource.data.clubId) && resource.data.registeredCount == 0);
    }

    // RESULTS
    match /results/{resultId} {
        allow read: if isAuth();
        allow create, update: if isAuth() && (isSiteAdmin() || isClubAdmin(request.resource.data.clubId));
        allow delete: if isAuth() && (isSiteAdmin() || isClubAdmin(resource.data.clubId));
    }
    
    // NOTIFICATIONS
    match /notifications/{notificationId} {
        allow read, update, delete: if isAuth() && request.auth.uid == resource.data.userId;
        allow create: if isAuth(); // Further validation in backend/security rules if needed
    }

    // BLOGS & SUBCOLLECTIONS
    match /blogs/{postId} {
        allow read: if isAuth();
        allow create, update: if isAuth() && (isSiteAdmin() || isClubAdmin(request.resource.data.clubId) || request.auth.uid == request.resource.data.authorId);
        allow delete: if isAuth() && (isSiteAdmin() || isClubAdmin(resource.data.clubId) || request.auth.uid == resource.data.authorId);
        
        match /comments/{commentId} {
            allow read: if isAuth();
            allow create: if isAuth() && getUserData(request.auth.uid).memberStatus == 'Member';
            allow delete: if isAuth() && (isSiteAdmin() || isClubAdmin(get(/databases/$(database)/documents/blogs/$(postId)).data.clubId) || request.auth.uid == resource.data.authorId);
        }
    }
    
    // TAGS
    match /tags/{tagId} {
        allow read: if isAuth();
        allow write: if isAuth() && (isSiteAdmin() || isClubAdmin(request.resource.data.clubId));
    }
    
    // STANDARD TEXTS
    match /Standard_Texts/{textId} {
      allow read, write: if isAuth() && (isSiteAdmin() || getUserData(request.auth.uid).primaryClubId == resource.data.clubId);
    }
    
    // HELP DOCUMENTS
    match /helpDocuments/{docId} {
        allow read: if isAuth();
        allow write: if isSiteAdmin();
    }
    
    // PUBLIC COLLECTIONS
    match /publicMatches/{matchId} {
      allow read: if true;
      allow write: if isSiteAdmin() || isClubAdmin(get(/databases/$(database)/documents/matches/$(matchId)).data.clubId);
    }
    
    match /publicUpcomingMatches/{matchId} {
      allow read: if true;
      allow write: if isSiteAdmin() || isClubAdmin(get(/databases/$(database)/documents/matches/$(matchId)).data.clubId);
    }
    
    match /publicBlogPosts/{postId} {
      allow read: if true;
      allow write: if isAuth() && (isSiteAdmin() || isClubAdmin(get(/databases/$(database)/documents/blogs/$(postId)).data.clubId));
    }
  }
}
