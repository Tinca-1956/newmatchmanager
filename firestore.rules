
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isClubMember(clubId) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == clubId;
    }
    
    function isUserResource(userId) {
        return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read;
      allow create, update: if isUserResource(userId);
    }
    
    match /clubs/{clubId} {
        allow read;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }
    
     match /series/{seriesId} {
        allow read;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
    }
    
    match /matches/{matchId} {
        allow read;
        allow update: if request.auth != null 
                      && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['registeredAnglers', 'registeredCount']);
        allow create, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
    }

    match /results/{resultId} {
        allow read;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
    }

    match /Standard_Texts/{textId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
    }

    match /helpDocuments/{docId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
    }
    
    match /blogs/{blogId} {
        allow read: if request.auth != null;
        allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'] || request.auth.uid == resource.data.authorId;
    }

    match /blogs/{blogId}/comments/{commentId} {
        allow read: if request.auth != null;
        allow create: if request.auth.uid == request.resource.data.authorId;
    }
    
    match /notifications/{notificationId} {
        allow read, write: if request.auth.uid == resource.data.userId;
    }
    
    match /tags/{tagId} {
        allow read: if request.auth != null;
        allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
    }
    
    match /publicBlogPosts/{postId} {
      allow read;
    }

    match /publicMatches/{matchId} {
      allow read;
    }

    match /publicUpcomingMatches/{matchId} {
        allow read;
    }
  }
}
