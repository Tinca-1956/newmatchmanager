
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow any authenticated user to read from the users collection.
    // This is a temporary measure for debugging.
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    match /clubs/{clubId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin'];
    }

    match /series/{seriesId} {
       allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
    }

    match /matches/{matchId} {
       allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
       // Also allow any registered user to read the match details
       allow read: if request.auth != null && resource.data.registeredAnglers.hasAny([request.auth.uid]);
    }
    
    match /results/{resultId} {
       allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
    }

    // Default deny all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
