rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow any authenticated user to perform any action on these collections.
    // This is a temporary, permissive rule to unblock development.
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    match /clubs/{clubId} {
      allow read, write: if request.auth != null;
    }
    match /series/{seriesId} {
      allow read, write: if request.auth != null;
    }
    match /matches/{matchId} {
      allow read, write: if request.auth != null;
    }
    match /results/{resultId} {
      allow read, write: if request.auth != null;
    }
    match /helpDocuments/{docId} {
        allow read, write: if request.auth != null;
    }

    // Public collections are read-only for everyone.
    // Write access is denied from the client to ensure data integrity.
    match /publicMatches/{matchId} {
      allow read: if true;
      allow write: if false;
    }
    match /publicUpcomingMatches/{matchId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
