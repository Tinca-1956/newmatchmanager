
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user has a specific role
    function hasRole(role) {
      return request.auth.token.role == role;
    }
    
    // Helper function to check if the user is a member of a specific club
    function isMemberOf(clubId) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == clubId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Any authenticated user can create their own profile.
      allow create: if request.auth != null;
      // Users can only read/update their own profile.
      allow read, update: if request.auth.uid == userId || hasRole('Site Admin');
      // Only a Site Admin can delete a user document.
      allow delete: if hasRole('Site Admin');
    }
    
    // Rules for the 'clubs' collection
    match /clubs/{clubId} {
      allow list: if true; // Allow public listing of all clubs
      allow get: if request.auth != null; // Allow any authenticated user to get a single club
      // Only Site Admins can create, update, or delete clubs.
      allow write: if hasRole('Site Admin');
    }

    // Rules for the 'series' collection
    match /series/{seriesId} {
        // Any authenticated user can read series info.
        allow read: if request.auth != null;
        // Only Admins can create/update/delete series.
        allow write: if hasRole('Site Admin') || (hasRole('Club Admin') && isMemberOf(resource.data.clubId));
    }
    
    // Rules for the 'matches' collection
    match /matches/{matchId} {
      // Users can read matches that belong to their club
      allow get: if isMemberOf(resource.data.clubId);
      allow list: if isMemberOf(request.query.clubId);
      
      // Only Admins can create/update/delete matches
      allow write: if hasRole('Site Admin') || (hasRole('Club Admin') && isMemberOf(resource.data.clubId));
    }

    // Rules for the 'results' collection
    match /results/{resultId} {
      // Users can read results that belong to their club
      allow read: if isMemberOf(resource.data.clubId);

      // Only Admins or Marshals can write results
      allow write: if hasRole('Site Admin') || (hasRole('Club Admin') && isMemberOf(resource.data.clubId)) || hasRole('Marshal');
    }

    // Rules for public collections
    match /publicMatches/{matchId} {
      allow read: if true;
      allow write: if false; // Should only be written from a trusted backend/function
    }
    match /publicUpcomingMatches/{matchId} {
      allow read: if true;
      allow write: if false; // Should only be written from a trusted backend/function
    }
  }
}
