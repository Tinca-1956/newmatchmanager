
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper Functions
    function isUserAuthenticated() {
      return request.auth != null;
    }

    function isSiteAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }
    
    function isClubAdmin() {
       return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin';
    }

    // Rules for 'clubs' collection
    match /clubs/{clubId} {
      // Anyone authenticated can read the list of clubs
      allow read: if isUserAuthenticated();
      
      // Only Site Admins can create or update club details
      allow create, update: if isSiteAdmin();

      // Only Site Admins can delete a club
      allow delete: if isSiteAdmin();
    }
    
    // Rules for 'users' collection
    match /users/{userId} {
      // Users can read their own document. Club/Site admins can read any user document.
      allow read: if isUserAuthenticated() && (request.auth.uid == userId || isClubAdmin() || isSiteAdmin());

      // Users can update their own name and primary club.
      // Admins can update name, role, and memberStatus.
      allow update: if isUserAuthenticated() && 
                      (request.auth.uid == userId && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['firstName', 'lastName', 'primaryClubId'])) ||
                      ((isClubAdmin() || isSiteAdmin()) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['firstName', 'lastName', 'role', 'memberStatus']));
                      
      // Allow user creation (typically during post-registration flow)
      allow create: if isUserAuthenticated();
      
      // Generally, don't allow users to be deleted from the client.
      allow delete: if false;
    }
    
    // Rules for 'series' collection
    match /series/{seriesId} {
       // Club Admins or Site Admins can read series data
      allow read: if isUserAuthenticated() && (isClubAdmin() || isSiteAdmin());
      
      // Club Admins or Site Admins can create and update series
      allow create, update: if isUserAuthenticated() && (isClubAdmin() || isSiteAdmin());
      
      // Only Site Admins should be able to delete a series (for now)
      allow delete: if isSiteAdmin();
    }

    // Rules for 'matches' collection
    match /matches/{matchId} {
       // Club Admins or Site Admins can read match data
      allow read: if isUserAuthenticated() && (isClubAdmin() || isSiteAdmin());
      
      // Club Admins or Site Admins can create and update matches
      allow create, update: if isUserAuthenticated() && (isClubAdmin() || isSiteAdmin());
      
      // Only Site Admins should be able to delete a match
      allow delete: if isSiteAdmin();
    }
  }
}

    