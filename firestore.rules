rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSiteAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }

    function isClubAdmin() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin';
    }

    function isClubAdminForRequest(clubId) {
        return isClubAdmin() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == clubId;
    }
    
    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow create: if isSignedIn();
      // Allow a user to read their own document, OR
      // Allow a site admin to read any user document, OR
      // Allow any authenticated user to read documents of users who share the same primaryClubId.
      allow read: if request.auth.uid == userId 
                  || isSiteAdmin() 
                  || (isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.primaryClubId);
      allow update: if request.auth.uid == userId || isSiteAdmin() || isClubAdminForRequest(resource.data.primaryClubId);
      allow delete: if isSiteAdmin();
    }
    
    match /clubs/{clubId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSiteAdmin();
    }

    match /series/{seriesId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isSiteAdmin() || isClubAdminForRequest(request.resource.data.clubId);
    }

    match /matches/{matchId} {
        allow read: if isSignedIn();
        allow create: if isSiteAdmin() || isClubAdminForRequest(request.resource.data.clubId);
        // An admin can update anything.
        // A regular user can only update a match if they are only changing the registeredAnglers and registeredCount fields.
        allow update: if isSiteAdmin() || isClubAdminForRequest(request.resource.data.clubId)
                      || (request.auth.uid == request.resource.data.registeredAnglers[request.resource.data.registeredAnglers.size() - 1]
                          && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['registeredAnglers', 'registeredCount']));
        allow delete: if isSiteAdmin() || (isClubAdminForRequest(resource.data.clubId) && resource.data.registeredCount == 0);
    }
    
    match /results/{resultId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isSiteAdmin() || isClubAdminForRequest(request.resource.data.clubId);
    }

    match /Standard_Texts/{textId} {
      allow read: if isSignedIn();
      allow write: if isSiteAdmin() || isClubAdminForRequest(request.resource.data.clubId);
    }
    
     match /publicUpcomingMatches/{matchId} {
      allow read: if true;
      allow write: if isSiteAdmin() || isClubAdmin();
    }
    
    match /publicMatches/{matchId} {
      allow read: if true;
      allow write: if isSiteAdmin() || isClubAdmin();
    }
  }
}
