
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isSiteAdmin() {
        return isSignedIn() && getUserData(request.auth.uid).role == 'Site Admin';
    }

    function isClubAdmin(clubId) {
        let user = getUserData(request.auth.uid);
        return isSignedIn() &&
               user.primaryClubId == clubId &&
               user.role in ['Site Admin', 'Club Admin'];
    }

    function isClubMember(clubId) {
       let user = getUserData(request.auth.uid);
       return isSignedIn() &&
              user.primaryClubId == clubId &&
              user.memberStatus == 'Member';
    }

    // Collection Rules
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isUser(userId) || isSiteAdmin();
      allow delete: if isSiteAdmin();
    }

    match /clubs/{clubId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSiteAdmin();
    }

    match /series/{seriesId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId);
    }
    
    match /matches/{matchId} {
      // Allow reading a single match document if the user is a site admin or a member of that match's club.
      allow get: if isSiteAdmin() || isClubMember(get(/databases/$(database)/documents/matches/$(matchId)).data.clubId);
      
      // Allow listing matches if the user is a site admin, or if their query is scoped to the club they are a member of.
      allow list: if isSiteAdmin() || (isSignedIn() && request.query.clubId == getUserData(request.auth.uid).primaryClubId);

      allow create, update: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId);
      allow delete: if isSiteAdmin() || isClubAdmin(resource.data.clubId);
    }
    
    match /results/{resultId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId);
    }
  }
}
