rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isSiteAdmin() {
      return isAuthenticated() && getUserRole(request.auth.uid) == 'Site Admin';
    }

    function isClubAdmin(clubId) {
       let userRole = getUserRole(request.auth.uid);
       let userPrimaryClubId = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId;
       return userRole == 'Club Admin' && userPrimaryClubId == clubId;
    }

    function isClubOrSiteAdmin(clubId) {
      return isSiteAdmin() || isClubAdmin(clubId);
    }
    
    function isMemberOfClub(clubId) {
      let userPrimaryClubId = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId;
      return isAuthenticated() && userPrimaryClubId == clubId;
    }

    // --- Collection Rules ---

    // USERS
    // Users can read/update their own profile. Admins can manage all users.
    match /users/{userId} {
      allow get, update: if isUser(userId) || isSiteAdmin();
      allow list: if isSiteAdmin();
      allow create: if isAuthenticated(); // Any authenticated user can create their profile
      allow delete: if isSiteAdmin();
    }
    
    // CLUBS
    // Any authenticated user can read clubs, only site admins can write.
    match /clubs/{clubId} {
        allow get, list: if isAuthenticated();
        allow create, update, delete: if isSiteAdmin();
    }

    // SERIES
    // Members can read series from their own club. Admins can write.
    match /series/{seriesId} {
      allow get, list: if isAuthenticated() && isMemberOfClub(resource.data.clubId);
      allow create, update, delete: if isClubOrSiteAdmin(resource.data.clubId);
    }

    // MATCHES
    // Members can read matches from their own club. Admins can write.
    match /matches/{matchId} {
      // Allow read if user belongs to the club the match is in.
      allow get, list: if isAuthenticated() && isMemberOfClub(resource.data.clubId);
      allow create, update, delete: if isClubOrSiteAdmin(resource.data.clubId);
    }
    
    // RESULTS
    // Members can read results from their own club. Admins can write.
    match /results/{resultId} {
      allow get, list: if isAuthenticated() && isMemberOfClub(resource.data.clubId);
      allow create, update, delete: if isClubOrSiteAdmin(resource.data.clubId);
    }

    // BLOGS & COMMENTS
    // Members can read/comment on posts in their club. Admins can manage posts.
    match /blogs/{blogId} {
      allow get, list: if isAuthenticated() && isMemberOfClub(resource.data.clubId);
      allow create, update, delete: if isClubOrSiteAdmin(resource.data.clubId);

      match /comments/{commentId} {
        allow read, create: if isAuthenticated() && isMemberOfClub(get(/databases/$(database)/documents/blogs/$(blogId)).data.clubId);
        allow update, delete: if isClubOrSiteAdmin(get(/databases/$(database)/documents/blogs/$(blogId)).data.clubId);
      }
    }
    
    // NOTIFICATIONS
    // Users can only read/update their own notifications.
    match /notifications/{notificationId} {
      allow read, update, delete: if isUser(resource.data.userId);
      allow create: if isAuthenticated();
    }
    
    // STANDARD TEXTS
    // Admins can manage standard texts for their club.
    match /Standard_Texts/{textId} {
      allow read, create, update, delete: if isClubOrSiteAdmin(resource.data.clubId);
    }

    // --- Public Collections ---
    
    // Public posts are read-only for everyone, writeable only by admins.
    match /publicBlogPosts/{postId} {
      allow get, list: if true;
      allow create, update, delete: if isClubOrSiteAdmin(request.resource.data.clubId);
    }
    
    // Public match results are read-only for everyone.
    match /publicMatches/{matchId} {
        allow get, list: if true;
        allow create, update, delete: if isClubOrSiteAdmin(request.resource.data.clubId);
    }
    
    // Public upcoming matches are read-only for everyone.
    match /publicUpcomingMatches/{matchId} {
       allow get, list: if true;
       allow create, update, delete: if isClubOrSiteAdmin(request.resource.data.clubId);
    }
  }
}