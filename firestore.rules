rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function getUserClubId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId;
    }

    // --- User Profiles ---
    // Users can read their own profile.
    // Users can update their own profile (firstName, lastName, primaryClubId).
    // Admins can update any user's profile.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || getUserRole() == 'Site Admin';
      allow update: if request.auth.uid == userId 
        || getUserRole() in ['Site Admin', 'Club Admin'];
      allow create: if request.auth.uid == userId;
    }

    // --- Clubs ---
    // All authenticated users can read club information.
    // Only Site Admins can create, update, or delete clubs.
    match /clubs/{clubId} {
      allow read: if request.auth != null;
      allow write: if getUserRole() == 'Site Admin';
    }

    // --- Series ---
    // Authenticated users can read series info.
    // Club Admins can manage series for their own club.
    // Site Admins can manage any series.
    match /series/{seriesId} {
      allow read: if request.auth != null;
      allow write: if getUserRole() == 'Site Admin' 
        || (getUserRole() == 'Club Admin' && request.resource.data.clubId == getUserClubId());
    }

    // --- Matches ---
    // Authenticated users can read match info.
    // Users can register/unregister (update registeredAnglers array).
    // Admins can manage matches in their club.
    match /matches/{matchId} {
      allow read: if request.auth != null;
      // Allow general updates by admins
      allow update: if getUserRole() == 'Site Admin' 
        || (getUserRole() == 'Club Admin' && request.resource.data.clubId == getUserClubId())
        // Allow any authenticated user to update ONLY the registeredAnglers array (for registration)
        || (request.auth != null && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['registeredAnglers', 'registeredCount']));
      allow create, delete: if getUserRole() == 'Site Admin' 
        || (getUserRole() == 'Club Admin' && request.resource.data.clubId == getUserClubId());
    }

    // --- Results ---
    // Authenticated users can read results.
    // Marshals, Club Admins, and Site Admins can write results for matches in their club.
    match /results/{resultId} {
      allow read: if request.auth != null;
      // Check the clubId of the match document being referenced in the result
      allow write: if getUserRole() == 'Site Admin'
        || (getUserRole() in ['Club Admin', 'Marshal'] && get(/databases/$(database)/documents/matches/$(request.resource.data.matchId)).data.clubId == getUserClubId());
    }
  }
}
