
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isSiteAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }

    function isClubAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin';
    }

    function isAngler() {
       return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Angler';
    }

    // Collection Rules
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn(); // Allows new users to create their own profile document
      allow update: if request.auth.uid == userId || isSiteAdmin();
      allow delete: if isSiteAdmin();
    }

    match /clubs/{clubId} {
      allow read: if isSignedIn();
      allow write: if isSiteAdmin();
    }

    match /series/{seriesId} {
      allow read: if isSignedIn();
      // Allow create/update/delete only for admins of the specific club
      allow write: if isSiteAdmin() ||
                   (isClubAdmin() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.clubId);
    }

    match /matches/{matchId} {
      allow read: if isSignedIn();

      // Rule for create: Check the incoming document's clubId against the user's primaryClubId
      allow create: if isSiteAdmin() || (isClubAdmin() &&
        request.resource.data.clubId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId);

      // Rule for update/delete: Check the existing document's clubId against the user's primaryClubId
      allow update, delete: if isSiteAdmin() || (isClubAdmin() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.clubId);
    }
    
    match /results/{resultId} {
        allow read: if isSignedIn();
        allow write: if isSiteAdmin() || 
                     (isClubAdmin() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.clubId);
    }

    match /Standard_Texts/{textId} {
        allow read: if isSignedIn();
        allow write: if isSiteAdmin() ||
                     (isClubAdmin() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.clubId);
    }
    
    match /helpDocuments/{docId} {
      allow read: if isSignedIn();
      allow write: if isSiteAdmin();
    }
    
    // PUBLIC-FACING COLLECTIONS - READ ONLY
    match /publicMatches/{matchId} {
      allow read: if true;
      allow write: if false; // Nobody can write directly to this collection
    }
    
    match /publicUpcomingMatches/{matchId} {
      allow read: if true;
      allow write: if false;
    }

  }
}
