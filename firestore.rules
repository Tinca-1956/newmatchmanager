rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSiteAdmin() {
      return request.auth.token.isSiteAdmin == true;
    }
    
    function isClubAdmin() {
      return request.auth.token.isClubAdmin == true;
    }

    function isSameClub(clubId) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == clubId;
    }
    
    match /clubs/{clubId} {
      allow read: if request.auth != null;
      allow create: if isSiteAdmin();
      allow update: if isSiteAdmin() || (isClubAdmin() && isSameClub(clubId));
      allow delete: if isSiteAdmin();
    }

    match /users/{userId} {
      allow read: if request.auth != null && (isSiteAdmin() || get(/databases/$(database)/documents/users/$(userId)).data.primaryClubId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId);
      allow create: if isSiteAdmin();
      allow update: if request.auth.uid == userId || isSiteAdmin();
      allow delete: if isSiteAdmin();
    }
    
    match /series/{seriesId} {
      allow read: if request.auth != null;
      allow create: if isSiteAdmin() || isClubAdmin();
      allow update, delete: if isSiteAdmin() || isClubAdmin();
    }
    
    match /matches/{matchId} {
      allow read: if request.auth != null;
      allow create, update: if isSiteAdmin() || isClubAdmin();
      allow delete: if isSiteAdmin();
    }

    match /results/{resultId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isSiteAdmin() || isClubAdmin();
    }

    // Public collections
    match /publicMatches/{matchId} {
        allow read: if true;
        allow write: if isSiteAdmin() || isClubAdmin(); // Should only be written via trusted backend/functions
    }

    match /publicUpcomingMatches/{matchId} {
        allow read: if true;
        allow write: if isSiteAdmin() || isClubAdmin();
    }
  }
}
