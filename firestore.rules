rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }
    
    function isUser(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isClubMember(clubId) {
      let userProfile = getUserData(request.auth.uid);
      return isAuth() && userProfile.primaryClubId == clubId;
    }
    
    function isAdmin() {
      let userProfile = getUserData(request.auth.uid);
      return isAuth() && (userProfile.role == 'Site Admin' || userProfile.role == 'Club Admin');
    }
    
    function isSiteAdmin() {
      let userProfile = getUserData(request.auth.uid);
      return isAuth() && userProfile.role == 'Site Admin';
    }

    // Rules for collections
    match /users/{userId} {
      allow read: if isAuth();
      allow write: if isUser(userId) || isSiteAdmin();
    }
    
    match /clubs/{clubId} {
      allow read: if true;
      allow write: if isSiteAdmin();
    }

    match /series/{seriesId} {
      allow read: if isAuth();
      allow write: if isAuth() && isClubMember(resource.data.clubId);
    }
    
    match /matches/{matchId} {
      allow read: if true;
      allow create: if isAuth() && isClubMember(request.resource.data.clubId);
      allow update: if isAuth() && (
        (isClubMember(resource.data.clubId) && request.resource.data.keys().hasAll(['registeredAnglers', 'registeredCount'])) ||
        (isAdmin() && isClubMember(resource.data.clubId))
      );
      allow delete: if isAdmin() && isClubMember(resource.data.clubId);
    }

    match /results/{resultId} {
       allow read: if true;
       allow write: if isAuth() && isClubMember(request.resource.data.clubId);
    }
    
    match /blogs/{blogId} {
      allow read: if isAuth();
      allow write: if isAdmin() && isClubMember(request.resource.data.clubId);

      match /comments/{commentId} {
        allow read: if isAuth();
        allow create: if isAuth() && isClubMember(get(/databases/$(database)/documents/blogs/$(blogId)).data.clubId);
        allow write: if isAdmin();
      }
    }
    
    match /notifications/{notificationId} {
      allow read, write: if isAuth();
    }
    
     match /tags/{tagId} {
      allow read, write: if isAuth() && isAdmin();
    }

    match /publicMatches/{matchId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /publicUpcomingMatches/{matchId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /Standard_Texts/{textId} {
      allow read, write: if isAdmin();
    }
    
    match /helpDocuments/{docId} {
       allow read: if isAuth();
       allow write: if isAdmin();
    }
  }
}