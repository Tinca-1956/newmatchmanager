rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isSiteAdmin() {
      return getRole() == 'Site Admin';
    }

    function isClubAdmin() {
      return getRole() == 'Club Admin';
    }
    
    function isMarshal() {
      return getRole() == 'Marshal';
    }

    // --- Start of rules ---

    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if isSiteAdmin() || isClubAdmin();
      allow write: if isOwner(userId) || isSiteAdmin() || isClubAdmin();
    }

    match /clubs/{clubId} {
      allow read: if isSignedIn();
      allow write: if isSiteAdmin();
    }

    match /series/{seriesId} {
        allow read: if isSignedIn();
        allow write: if isSiteAdmin() || isClubAdmin();
    }

    match /matches/{matchId} {
      allow read: if isSignedIn();
      allow write: if isSiteAdmin() || isClubAdmin() || isMarshal();
    }

    match /results/{resultId} {
       allow read: if isSignedIn();
       allow write: if isSiteAdmin() || isClubAdmin() || isMarshal();
    }
  }
}
