
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSiteAdmin() {
      return request.auth.token.role == 'Site Admin';
    }

    function isClubAdmin(clubId) {
      return request.auth.token.role == 'Club Admin' && request.auth.token.primaryClubId == clubId;
    }

    function isClubMember(clubId) {
      return request.auth.token.primaryClubId == clubId;
    }

    // User Profile Rules
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isSiteAdmin();
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isSiteAdmin() || isClubAdmin(resource.data.primaryClubId);
      allow delete: if isSiteAdmin();
    }
    
    // List users in a club
     match /users/{userId} {
      allow list: if isSiteAdmin() || isClubMember(resource.data.primaryClubId);
    }

    // Club Rules
    match /clubs/{clubId} {
      allow read: if request.auth != null; // Any authenticated user can read club info
      allow create, update: if isSiteAdmin();
      allow delete: if isSiteAdmin();
    }
    
    // Series Rules
    match /series/{seriesId} {
      allow read: if request.auth != null;
      allow create, update: if isSiteAdmin() || isClubAdmin(resource.data.clubId);
      allow list: if isSiteAdmin() || isClubMember(resource.data.clubId);
    }

    // Match Rules
    match /matches/{matchId} {
      allow read: if request.auth != null;
      allow create, update: if isSiteAdmin() || isClubAdmin(resource.data.clubId);
      allow list: if isSiteAdmin() || (request.query.limit <= 100 && isClubMember(resource.data.clubId));
    }
    
    // Results Rules
    match /results/{resultId} {
      allow read: if request.auth != null;
      allow create, update: if isSiteAdmin() || isClubAdmin(resource.data.clubId);
      allow list: if isSiteAdmin() || isClubMember(resource.data.clubId);
    }
  }
}
