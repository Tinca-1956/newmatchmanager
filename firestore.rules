rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isSiteAdmin() {
      return request.auth.token.role == 'Site Admin';
    }

    function isClubAdmin() {
        return request.auth.token.role == 'Club Admin';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isMemberOfSameClub(userDoc) {
        return request.auth.token.primaryClubId == userDoc.primaryClubId;
    }

    // --- Collections ---
    match /users/{userId} {
      allow read: if isSignedIn() && (isSiteAdmin() || isOwner(userId) || isMemberOfSameClub(resource.data));
      allow create: if isSignedIn();
      allow update: if isSiteAdmin() || isOwner(userId);
      allow delete: if isSiteAdmin();
    }
    
    match /clubs/{clubId} {
        allow read: if isSignedIn();
        allow create, update: if isSiteAdmin() || (isClubAdmin() && request.auth.token.primaryClubId == clubId);
        allow delete: if isSiteAdmin();
    }

    match /series/{seriesId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isSiteAdmin() || isClubAdmin();
    }

    match /matches/{matchId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isSiteAdmin() || isClubAdmin();
    }

    match /results/{resultId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSiteAdmin() || isClubAdmin();
    }
    
    match /publicUpcomingMatches/{matchId} {
        allow read: if true;
        allow write: if isSiteAdmin() || isClubAdmin();
    }

    match /publicMatches/{matchId} {
        allow read: if true;
        allow write: if isSiteAdmin() || isClubAdmin();
    }
  }
}
