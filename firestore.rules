
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Users can only read/write their own user document.
    // Admins can read/write any user document.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId 
        || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
      allow create: if request.auth.uid == userId;
    }

    // Clubs are public, but only admins can create/update/delete them.
    match /clubs/{clubId} {
      allow read: if request.auth != null;
      allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }
    
    // Series are public, but only admins can create/update/delete them.
    match /series/{seriesId} {
       allow read: if request.auth != null;
       allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
    }

    // Matches can be read by any authenticated user in the same club.
    // Matches can only be created/updated by admins.
    match /matches/{matchId} {
        allow read: if request.auth != null && request.auth.token.role != 'Pending';
        allow create, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
        allow update: if request.auth != null;
    }
    
    // Results can be read by any authenticated user.
    // Results can only be written by Admins or Marshals.
    match /results/{resultId} {
       allow read: if request.auth != null;
       allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin', 'Marshal'];
    }
    
    // Allow users to create/update their own membership document, identified by userId_clubId
    match /memberships/{userId}_{clubId} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
    }
  }
}
