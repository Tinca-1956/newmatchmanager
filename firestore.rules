
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSiteAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }

    function isClubAdmin(clubId) {
      let user = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return user.role == 'Club Admin' && user.primaryClubId == clubId;
    }

    function isMarshal(clubId) {
       let user = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return user.role == 'Marshal' && user.primaryClubId == clubId;
    }
    
    function isMemberOfClub(clubId) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == clubId;
    }

    match /users/{userId} {
      allow read: if request.auth.uid == userId || isSiteAdmin();
      allow write: if request.auth.uid == userId || isSiteAdmin();
    }

    match /clubs/{clubId} {
      allow read: if true;
      allow create, write: if isSiteAdmin();
    }

    match /series/{seriesId} {
      allow read: if isMemberOfClub(resource.data.clubId);
      allow list, create, write: if isSiteAdmin() || isClubAdmin(resource.data.clubId);
    }
    
    match /matches/{matchId} {
      // Any authenticated user can read a single match document.
      allow get: if request.auth != null;
      
      // Users can list matches if they are registered for them.
      // This is the key rule that needs to be correct for the query to work.
      allow list: if request.auth.uid in resource.data.registeredAnglers;

      // Admins can create/update matches. Users can update by registering (handled in app logic).
      allow create, update: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId);
    }

    match /results/{resultId} {
      allow read: if true;
      allow list: if isSiteAdmin() || isClubAdmin(resource.data.clubId);
      allow create, write: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId) || isMarshal(request.resource.data.clubId);
    }
  }
}
