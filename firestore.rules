rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isSiteAdmin() {
      // Check for Site Admin role in the user's profile document.
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }

    // Rules for collections
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSiteAdmin() || request.auth.uid == userId;
    }

    match /clubs/{clubId} {
      allow read: if isSignedIn();
      allow write: if isSiteAdmin();
    }

    match /series/{seriesId} {
      allow read: if isSignedIn();
      // Allow write if the user is a site admin OR a club admin for the club associated with this series
      allow write: if isSiteAdmin() || 
                    (isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin' &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.clubId);
    }
    
    match /matches/{matchId} {
      // Simplest rule: Only a Site Admin can read or write for now to guarantee access.
      allow read, write: if isSiteAdmin();
    }

    match /results/{resultId} {
      allow read: if isSignedIn();
      // Allow write if the user is a site admin OR a club admin for the club associated with this result
      allow write: if isSiteAdmin() || 
                    (isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin' &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.clubId);
    }

    match /Standard_Texts/{textId} {
        allow read: if isSignedIn();
        allow write: if isSiteAdmin() ||
                     (isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin' &&
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.clubId);
    }
    
    match /publicMatches/{matchId} {
      allow read: if true;
      allow write: if isSiteAdmin();
    }
    
    match /publicUpcomingMatches/{matchId} {
        allow read: if true;
        allow write: if isSiteAdmin();
    }

  }
}
