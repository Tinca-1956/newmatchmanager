
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow any signed-in user to perform any action on any collection.
    // This is a temporary, permissive rule to unblock development.
    match /{path=**}/{document} {
      allow read, write: if request.auth != null;
    }
  }
}
