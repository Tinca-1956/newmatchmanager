
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // UTILITY: Allow admins to read/write to a utility collection if needed.
    match /utils/{docId} {
      allow read, write: if request.auth.token.role in ['Site Admin', 'Club Admin'];
    }

    // CLUBS: Publicly readable, only admins can write.
    match /clubs/{clubId} {
      allow read: if true;
      allow write: if request.auth.token.role in ['Site Admin'];
    }
    
    // USERS: 
    // - Users can read and update their own document.
    // - Authenticated users can read documents of other users within their own primary club.
    // - Admins can read any user document and update any user document.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.primaryClubId;
      allow read, update: if request.auth.token.role in ['Site Admin', 'Club Admin'];
      allow create: if request.auth != null;
    }

    // SERIES: Authenticated users can read, admins can write.
    match /series/{seriesId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth.token.role in ['Site Admin', 'Club Admin'];
    }

    // MATCHES: Authenticated users can read, admins/marshals can write/update.
    match /matches/{matchId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth.token.role in ['Site Admin', 'Club Admin', 'Marshal'];
    }

    // RESULTS: Authenticated users can read, admins/marshals can write/update.
    match /results/{resultId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth.token.role in ['Site Admin', 'Club Admin', 'Marshal'];
    }
    
    // PUBLIC MATCHES: Open read access for everyone for the public dashboard. No write access from client.
    match /publicMatches/{matchId} {
      allow read: if true;
      allow write: if false; // Should only be written from a trusted server/function
    }
    
    // PUBLIC UPCOMING MATCHES: Open read access for everyone for the public dashboard. No write access from client.
    match /publicUpcomingMatches/{matchId} {
        allow read: if true;
        allow write: if false; // Should only be written from a trusted server/function
    }
  }
}
