rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read/write access to the 'clubs' collection for any authenticated user
    match /clubs/{clubId} {
      allow read, write: if request.auth != null;
    }

    // Allow users to read and update their own user document
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Allow the database test page to perform its connection check
    match /test_collection/{docId} {
        allow read: if request.auth != null;
    }
  }
}
