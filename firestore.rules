rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isSiteAdmin() {
      return isSignedIn() && getUserData(request.auth.uid).role == 'Site Admin';
    }

    function isClubAdmin(clubId) {
      let userRole = getUserData(request.auth.uid).role;
      let userClubId = getUserData(request.auth.uid).primaryClubId;
      return isSignedIn() && (userRole == 'Club Admin' || userRole == 'Site Admin') && userClubId == clubId;
    }

    // Collection: users
    match /users/{userId} {
      // Anyone can create their own user document during registration/club selection
      allow create: if isSignedIn();
      
      // Users can read their own data.
      // Other users from the same club can read their data (for member/marshal lists).
      allow read: if isUser(userId) || 
                  (isSignedIn() && getUserData(request.auth.uid).primaryClubId == resource.data.primaryClubId);

      // A user can update their own basic info.
      // Admins can update more fields.
      allow update: if isUser(userId) || 
                     isClubAdmin(resource.data.primaryClubId);
                     
      allow delete: if false; // Don't allow users to be deleted for now
    }

    // Collection: clubs
    match /clubs/{clubId} {
      allow read: if isSignedIn();
      allow create, update: if isClubAdmin(request.resource.data.clubId);
      allow delete: if isSiteAdmin();
    }
    
    // Collection: series
    match /series/{seriesId} {
      allow read: if isSignedIn() && getUserData(request.auth.uid).primaryClubId == resource.data.clubId;
      allow create, update: if isClubAdmin(request.resource.data.clubId);
      allow delete: if isClubAdmin(resource.data.clubId);
    }
    
    // Collection: matches
    match /matches/{matchId} {
        allow read: if isSignedIn() && getUserData(request.auth.uid).primaryClubId == resource.data.clubId;
        allow create, update: if isClubAdmin(request.resource.data.clubId);
        allow delete: if isClubAdmin(resource.data.clubId);
    }
  }
}
