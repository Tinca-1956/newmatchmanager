rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isSiteAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }
    
    function isClubAdmin(clubId) {
      let user = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return user.role == 'Club Admin' && user.primaryClubId == clubId;
    }
    
    // All users can read their own user document
    // Site admins can write to any user document
    // Users can update their own profile details
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSiteAdmin();
      allow update: if request.auth.uid == userId;
    }
    
    // All users can read all club documents
    match /clubs/{clubId} {
      allow read: if true;
      allow create, update, delete: if isClubAdmin(clubId) || isSiteAdmin();
    }
    
    // Only Site Admins or Club Admins for the relevant club can write to series
    match /series/{seriesId} {
      allow read: if isSignedIn();
      allow write: if isClubAdmin(request.resource.data.clubId) || isSiteAdmin();
    }
    
    // All users can read matches in their own club.
    // Admins can write to matches in their own club.
    match /matches/{matchId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isClubAdmin(request.resource.data.clubId) || isSiteAdmin();
    }
   
    // Only Site Admins or Club Admins for the relevant club can write to results
    match /results/{resultId} {
      allow read: if isSignedIn();
      allow write: if isClubAdmin(request.resource.data.clubId) || isSiteAdmin();
    }

    // Help documents can be read by any signed-in user, but only written by site admins
    match /helpDocuments/{docId} {
      allow read: if isSignedIn();
      allow write: if isSiteAdmin();
    }

    // Allow public read access to published match results
    match /publicMatches/{matchId} {
      allow read: if true;
      allow write: if false; // Should only be written from a trusted backend/admin
    }

    // Allow public read access to upcoming matches
    match /publicUpcomingMatches/{matchId} {
      allow read: if true;
      allow write: if false; // Should only be written from a trusted backend/admin
    }
  }
}
