
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read all club, series, match and result data if they are logged in
    match /clubs/{clubId} {
      allow read: if request.auth != null;
      allow write: if false; // To be managed by Club Admins later
    }

    match /series/{seriesId} {
      allow read, write: if request.auth != null;
    }

    match /matches/{matchId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Will be restricted later
    }

    match /results/{resultId} {
       allow read, write: if request.auth != null; // Will be restricted later
    }

    // Users can read any profile, but can only write to their own.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
