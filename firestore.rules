rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
    }

    function isAuthenticated() {
      return request.auth.uid != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || isOwner(userId);
    }

    match /clubs/{clubId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    match /series/{seriesId} {
      allow read, write: if isAdmin();
    }

    match /matches/{matchId} {
      // Allow any authenticated user to register by updating the registeredAnglers array
      allow update: if isAuthenticated();
      allow read, create, delete: if isAdmin();
    }
    
    match /results/{resultId} {
      allow read, write: if isAdmin();
    }
    
    match /Standard_Texts/{textId} {
      allow read, write: if isAdmin();
    }

    match /helpDocuments/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /publicMatches/{matchId} {
      allow read: if true; // Publicly readable
      allow write: if isAdmin(); // Only admins can publish
    }

    match /publicUpcomingMatches/{matchId} {
        allow read: if true; // Publicly readable
        allow write: if isAdmin(); // Only admins can create/update
    }
  }
}
