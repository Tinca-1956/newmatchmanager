rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Any authenticated user can see the list of users (for Members page)
      allow list, get: if isAuthenticated();
      
      // A user can create their own profile document
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // A user can only read and update their own document
      allow read, update: if isAuthenticated() && request.auth.uid == userId;
    }

    // Rules for the 'clubs' collection
    match /clubs/{clubId} {
      // Any authenticated user can read club data
      allow read: if isAuthenticated();
      
      // For now, allow any authenticated user to create, update, delete.
      // We can restrict this to 'Club Admin' or 'Site Admin' roles later.
      allow write: if isAuthenticated();
    }
  }
}
