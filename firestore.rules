
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user's role based on their auth token claims
    function isAuthOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function getRole() {
      return request.auth.token.role;
    }

    function isSiteAdmin() {
      return getRole() == 'Site Admin';
    }

    function isClubAdmin() {
      return getRole() == 'Club Admin';
    }
    
    function isMarshal() {
      return getRole() == 'Marshal';
    }

    // Site Admins can do anything
    match /{document=**} {
      allow read, write: if isSiteAdmin();
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Any authenticated user can read their own profile.
      // Admins and Marshals can read any profile in their club.
      allow get: if request.auth != null && (isAuthOwner(userId) || isClubAdmin() || isMarshal());
      
      // Club Admins and Marshals can list all users in their club.
      // This is the rule that fixes the test access page.
      allow list: if request.auth != null && (isClubAdmin() || isMarshal());
      
      // An authenticated user can update their own document.
      // Club admins can update any user in their club.
      allow update: if request.auth != null && (isAuthOwner(userId) || isClubAdmin());
      
      // Allow user document creation only for the authenticated user themselves.
      allow create: if isAuthOwner(userId);
    }
    
    // Rules for 'clubs' collection
    match /clubs/{clubId} {
      // Anyone can read club information
      allow read: if true;
      // Only Site Admins can create or delete clubs (covered by wildcard rule)
      // Club Admins can update their own club
      allow update: if isClubAdmin() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == clubId;
    }

    // Rules for 'series' collection
    match /series/{seriesId} {
        // Anyone can read series information
        allow read: if true;
        // Club Admins can create/update series for their club
        allow write: if isClubAdmin();
    }

    // Rules for 'matches' collection
    match /matches/{matchId} {
        // Anyone can read match information
        allow read: if true;
        // Club Admins can create/update matches for their club
        allow write: if isClubAdmin();
    }

    // Rules for 'results' collection
    match /results/{resultId} {
        // Anyone can read results
        allow read: if true;
        // Marshals and Admins can write results
        allow write: if isMarshal() || isClubAdmin();
    }
  }
}
