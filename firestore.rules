rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isSiteAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }

    function isClubAdmin() {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin';
    }
    
    function isUpdatingOwnProfile() {
      // This rule is intentionally simple. A more complex rule might check individual fields.
      // For now, we are trusting the client-side logic to send the correct data.
      return request.resource.data.keys().hasAll(['firstName', 'lastName', 'primaryClubId']);
    }

    function isUpdatingClubMember(clubId) {
       return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == clubId;
    }

    match /users/{userId} {
      allow get, list: if isSignedIn();
      allow create: if isOwner(userId)
                    || isSiteAdmin()
                    || (isClubAdmin() && isUpdatingClubMember(request.resource.data.primaryClubId));
      allow update: if isOwner(userId) && isUpdatingOwnProfile()
                      || isSiteAdmin()
                      || (isClubAdmin() && isUpdatingClubMember(request.resource.data.primaryClubId));
      allow delete: if isSiteAdmin();
    }
    
    match /clubs/{clubId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSiteAdmin();
    }
    
    match /series/{seriesId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isSiteAdmin() || isClubAdmin();
    }

    match /matches/{matchId} {
        allow read: if isSignedIn();
        allow create: if isSiteAdmin() || isClubAdmin();
        // Club Admins can only update matches that belong to their primary club.
        allow update: if isSiteAdmin() || (isClubAdmin() && resource.data.clubId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId);
        allow delete: if isSiteAdmin() || isClubAdmin();
    }
    
    match /results/{resultId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isSiteAdmin() || isClubAdmin();
    }
    
    match /Standard_Texts/{textId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isSiteAdmin() || isClubAdmin();
    }
    
    match /publicMatches/{matchId} {
        allow read: if true;
        allow write: if false; // Only backend can write
    }
    
    match /publicUpcomingMatches/{matchId} {
      allow read: if true;
      allow write: if false;
    }
    
    match /helpDocuments/{docId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isSiteAdmin();
    }
  }
}
