rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for Site Admin role
    function isSiteAdmin() {
      return request.auth.token.role == 'Site Admin';
    }

    // Helper function to check if a user is a member of a specific club
    function isClubMember(clubId) {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return userDoc.primaryClubId == clubId && userDoc.memberStatus == 'Member';
    }

    // Users: Users can only read/update their own profile.
    // Club Admins can read any profile in their club. Site Admins can read all.
    match /users/{userId} {
      allow get: if request.auth.uid == userId || isSiteAdmin() || 
                  (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
                  get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.primaryClubId);
      
      // A Site Admin can list all users. Others can only list users within their primary club.
      allow list: if isSiteAdmin() || 
                   (request.query.limit is int && request.query.limit <= 100 && 
                   'primaryClubId' in request.query.keys() && request.query.primaryClubId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId);
                   
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isSiteAdmin();
      allow delete: if isSiteAdmin();
    }
    
    // Clubs: Publicly readable, but only Site Admins can create/edit them.
    match /clubs/{clubId} {
      allow read: if true;
      allow write: if isSiteAdmin();
    }
    
    // Series: Publicly readable, but only Site Admins & Club Admins can write.
    match /series/{seriesId} {
      allow read: if true;
      allow write: if isSiteAdmin() || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin';
    }

    // Matches: Anyone can read a single match. Listing is restricted.
    match /matches/{matchId} {
      allow get: if true;
      
      // Users can only list matches that belong to their own club. Site Admins can list any.
      allow list: if isSiteAdmin() || 
                   (request.query.limit is int && request.query.limit <= 100 && 
                   'clubId' in request.query.keys() && request.query.clubId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId);
                   
      allow write: if isSiteAdmin() || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin';
    }

    // Results: Publicly readable. Writes are restricted to admins/marshals via app logic.
    match /results/{resultId} {
        allow read: if true;
        allow write: if isSiteAdmin() || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin' || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Marshal';
    }
  }
}
