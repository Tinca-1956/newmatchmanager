rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSiteAdmin() {
      return request.auth.token.role == 'Site Admin';
    }

    function isClubAdmin() {
      return request.auth.token.role == 'Club Admin';
    }
    
    function isClubMarshal() {
        return request.auth.token.role == 'Marshal';
    }

    function isMemberOf(clubId) {
      return request.auth.token.primaryClubId == clubId;
    }
    
    function isOwner(userId) {
        return request.auth.uid == userId;
    }

    // PUBLIC: Allow anyone to read these collections
    match /publicMatches/{matchId} {
      allow read: if true;
    }
    
    match /publicUpcomingMatches/{matchId} {
      allow read: if true;
    }
    
    match /clubs/{clubId} {
      // Authenticated users can get a specific club document
      allow get: if request.auth != null;
      // Anyone can list the clubs (for public dashboard and registration)
      allow list: if true;
      // Only Site Admins can create, update, or delete clubs
      allow write: if isSiteAdmin();
    }

    match /users/{userId} {
      // A user can read/write their own document
      allow read, update: if isOwner(userId);
      // Admins can read any user's document
      allow get, list: if isSiteAdmin() || isClubAdmin();
       // Only Site/Club Admins can create new user docs (for seeding)
      allow create: if isSiteAdmin() || isClubAdmin();
       // Site Admins can delete users
      allow delete: if isSiteAdmin();
    }
    
    match /series/{seriesId} {
        // Any authenticated user can read series data
        allow read: if request.auth != null;
        // Only Admins can create or modify a series
        allow write: if isSiteAdmin() || isClubAdmin();
    }

    match /matches/{matchId} {
      // Users can read matches that belong to their primary club.
      // This is the key rule for the main dashboard and matches pages.
      allow read: if isMemberOf(resource.data.clubId);
      
      // Admins can create, update, and delete matches.
      allow write: if isSiteAdmin() || isClubAdmin();
    }
    
     match /results/{resultId} {
        // Users can read results that belong to their primary club.
        allow read: if isMemberOf(resource.data.clubId);
        
        // Admins and Marshals can write results
        allow write: if isSiteAdmin() || isClubAdmin() || isClubMarshal();
    }
  }
}
