
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin of a specific club
    function isClubAdmin(clubId) {
      let userRole = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      let userPrimaryClubId = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId;
      return (userRole == 'Club Admin' && userPrimaryClubId == clubId) || userRole == 'Site Admin';
    }

    // Users can read/update their own profile.
    // Admins can read profiles of users in their club.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow read: if isClubAdmin(resource.data.primaryClubId);
    }

    // Clubs can be read by any authenticated user (to select one).
    // Only admins of that club can create or update it.
    match /clubs/{clubId} {
      allow read: if request.auth != null;
      allow create, update: if isClubAdmin(clubId);
    }
    
    // Series can be read by any authenticated user.
    // Only admins of the associated club can manage them.
    match /series/{seriesId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isClubAdmin(request.resource.data.clubId);
    }
    
    // Matches can be read by any authenticated user.
    // Only admins of the associated club can manage them.
    match /matches/{matchId} {
      allow read: if request.auth != null;
      // Allow registration by any authenticated user (update to add themselves to the array)
      allow update: if request.auth.uid in request.resource.data.registeredAnglers || isClubAdmin(request.resource.data.clubId);
      allow create, delete: if isClubAdmin(request.resource.data.clubId);
    }
    
    // Results can be read by any authenticated user.
    // Only admins of the associated club can manage them.
    match /results/{resultId} {
        allow read: if request.auth != null;
        allow create, update, delete: if isClubAdmin(request.resource.data.clubId);
    }

    // APPLICATIONS:
    // Any authenticated user can create an application for themselves.
    // Only an admin of the requested club can read applications for that club.
    match /applications/{applicationId} {
       allow create: if request.auth.uid == request.resource.data.userId;
       allow read: if isClubAdmin(resource.data.clubId);
       // Delete/Update will be handled by a cloud function or admin action later
       allow update, delete: if isClubAdmin(resource.data.clubId);
    }
  }
}
