
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isAuth() {
      return request.auth != null;
    }
    
    function isUser(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isSiteAdmin() {
      return isAuth() && getUserData().role == 'Site Admin';
    }
    
    function isClubAdmin(clubId) {
      return isAuth() && getUserData().primaryClubId == clubId && getUserData().role == 'Club Admin';
    }

    match /users/{userId} {
      allow read: if isAuth();
      allow write: if isUser(userId) || isSiteAdmin();
    }
    
    match /clubs/{clubId} {
      allow read: if isAuth();
      allow write: if isSiteAdmin();
    }
    
    match /series/{seriesId} {
      allow read: if isAuth();
      allow write: if isSiteAdmin() || isClubAdmin(get(/databases/$(database)/documents/series/$(seriesId)).data.clubId);
    }
    
    match /matches/{matchId} {
      // Allow any authenticated user to read/list matches.
      // This is a temporary, simplified rule to unblock the main page.
      allow read: if isAuth();
      allow write: if isAuth() && (isSiteAdmin() || isClubAdmin(resource.data.clubId));
    }
    
    match /results/{resultId} {
      allow read: if isAuth();
      allow write: if isAuth();
    }
  }
}
