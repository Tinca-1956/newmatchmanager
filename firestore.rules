
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // =================================
    // USERS
    // =================================
    match /users/{userId} {
      // Allow user to read their own profile
      allow read: if request.auth.uid == userId;

      // Allow admins to read any user profile
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];

      // Allow a new user to create their own profile document during sign-up
      allow create: if request.auth.uid == userId &&
                      request.resource.data.firstName is string &&
                      request.resource.data.lastName is string &&
                      request.resource.data.email == request.auth.token.email &&
                      request.resource.data.primaryClubId is string &&
                      (request.resource.data.role == 'Angler' || (request.resource.data.role == 'Site Admin' && request.auth.token.email == 'stuart.thomas.winton@gmail.com')) &&
                      request.resource.data.memberStatus is string;
                      
      // Allow admins to update user profiles (e.g., change roles, status, names)
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];

      // Allow a user to update their own profile (firstName, lastName, primaryClubId)
      allow update: if request.auth.uid == userId &&
                      request.resource.data.diff(request.resource.data).affectedKeys().hasOnly(['firstName', 'lastName', 'primaryClubId', 'role', 'memberStatus']);

      // Allow admins to delete users (this is a soft delete, just an update)
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }

    // Allow authenticated users to list users.
    // This is required for features like the Angler List modal, where a user needs to see a list of names.
    // The more restrictive `read` rules above prevent access to the full document data.
    match /users/{userId} {
       allow list: if request.auth != null;
    }

    // =================================
    // CLUBS
    // =================================
    match /clubs/{clubId} {
      // Anyone can read club information
      allow read: if true;
      
      // Only Site Admins can create or delete clubs
      allow create, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
      
      // Allow Site Admin to update any club
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';

      // Allow Club Admin to update their own club
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin' &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == clubId;
    }

    // =================================
    // SERIES
    // =================================
    match /series/{seriesId} {
      // Any authenticated user can read series info
      allow read: if request.auth != null;

      // Admins can create, update, and delete series
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
    }

    // =================================
    // MATCHES
    // =================================
    match /matches/{matchId} {
      // Any authenticated user can read match details
      allow read: if request.auth != null;

      // Let any authenticated user list matches (the read rule will secure the data)
      // This is necessary for features like the 'Check Anglers' modal to work correctly,
      // as it needs to query across the collection before individual document reads are checked.
      allow list: if request.auth != null;

      // Admins can create and update matches
      allow create, update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
    }

    // =================================
    // RESULTS
    // =================================
    match /results/{resultId} {
      // Any authenticated user can read results
      allow read: if request.auth != null;

      // Admins can create and update results (e.g., during weigh-in)
      allow create, update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
    }
    
    // Allow admins to list results. This is required for publishing.
    match /results/{resultId} {
      allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
    }

    // =================================
    // HELP DOCUMENTS
    // =================================
    match /helpDocuments/{docId} {
      // Anyone can read help documents
      allow read: if true;
      // Only Site Admins can write/delete
      allow write, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }
    
    // =================================
    // PUBLIC COLLECTIONS
    // =================================
    match /publicMatches/{matchId} {
        allow read: if true;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }

    match /publicUpcomingMatches/{matchId} {
        allow read: if true;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
    }
  }
}
