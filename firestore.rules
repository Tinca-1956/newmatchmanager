
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // ========== COLLECTIONS ==========

    // CLUBS: Only authenticated users can read club info.
    // Site admins can write/update club info.
    match /clubs/{clubId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }

    // USERS: 
    // 1. A user can always read/update their OWN document.
    // 2. Site Admins can read/write any user document.
    // 3. Authenticated users can read the list of users for a specific club.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
      allow list: if request.auth != null; // Simplified list rule
    }
    
    // SERIES: Authenticated users can read.
    // Admins can write.
    match /series/{seriesId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin' 
                  || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin';
    }
    
    // MATCHES: 
    // - Authenticated users can read.
    // - Admins can write/create.
    // - Any user can update the 'registeredAnglers' and 'registeredCount' fields (for registering/unregistering)
    match /matches/{matchId} {
      allow read, create, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin' 
                          || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin';
      allow read: if request.auth != null;
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin' 
                      || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin'
                      || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['registeredAnglers', 'registeredCount']));
    }

    // RESULTS: Authenticated users can read.
    // Admins/Marshals can write.
    match /results/{resultId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin' 
                  || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin'
                  || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Marshal';
    }
    
    // PUBLIC MATCHES:
    // Anyone can read, only authenticated users (via the app) can write.
    match /publicMatches/{matchId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
