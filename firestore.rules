
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper Functions
    function isAuth() {
      return request.auth != null;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    
    function isSiteAdmin() {
      return isAuth() && getUserData(request.auth.uid).role == 'Site Admin';
    }

    function isClubAdminOrMarshal(clubId) {
        let userRole = getUserData(request.auth.uid).role;
        let userClubId = getUserData(request.auth.uid).primaryClubId;
        return isAuth() && (userRole == 'Club Admin' || userRole == 'Marshal') && userClubId == clubId;
    }
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
    
    // User can read/write their own user document
    match /users/{userId} {
      allow read, update, create: if isAuth() && request.auth.uid == userId;
      allow list: if isAuth(); // Allow fetching lists of users (e.g., for registered anglers)
    }

    // Any authenticated user can read clubs
    match /clubs/{clubId} {
        allow read: if isAuth();
        // Allow Site Admin to do anything
        // Allow Club Admins to update their own club
        allow write: if isSiteAdmin() || isClubAdminOrMarshal(clubId);
    }
    
    // Series can be managed by club admins
    match /series/{seriesId} {
        allow read: if isAuth();
        allow create, update, delete: if isSiteAdmin() || isClubAdminOrMarshal(request.resource.data.clubId);
    }

    // Matches can be managed by club admins, but any user can register (update)
    match /matches/{matchId} {
        allow read: if isAuth();
        allow create, update, delete: if isSiteAdmin() || isClubAdminOrMarshal(request.resource.data.clubId) || isClubAdminOrMarshal(get(path(request.path)).data.clubId);
    }

    // Results can be managed by club admins and marshals
    match /results/{resultId} {
        allow read, list, create, update, delete: if isSiteAdmin() || isClubAdminOrMarshal(request.resource.data.clubId);
    }
  }
}
