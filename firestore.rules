
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isSiteAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }
    
    function isClubAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin';
    }

    function isAngler() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Angler';
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, update: if isOwner(userId) || isSiteAdmin();
      allow create: if request.auth != null && request.auth.uid == userId;
      allow list: if isSiteAdmin() || isClubAdmin();
      allow delete: if isSiteAdmin();
    }
    
    match /clubs/{clubId} {
        allow read: if true;
        allow list: if true;
        allow create, update, delete: if isSiteAdmin();
    }
    
    match /series/{seriesId} {
        allow read, list: if request.auth != null;
        allow create, update, delete: if isSiteAdmin() || isClubAdmin();
    }

    match /matches/{matchId} {
        allow read, list: if request.auth != null;
        allow create, update, delete: if isSiteAdmin() || isClubAdmin();
    }
    
    match /results/{resultId} {
        allow read, list: if request.auth != null;
        allow create, update, delete: if isSiteAdmin() || isClubAdmin();
    }
    
    match /helpDocuments/{documentId} {
        allow read, list: if true;
        allow create, delete: if isSiteAdmin();
    }

    match /publicMatches/{matchId} {
        allow read, list: if true;
        allow create, update: if isSiteAdmin() || isClubAdmin();
        allow delete: if isSiteAdmin();
    }
    
    match /publicUpcomingMatches/{matchId} {
        allow read, list: if true;
        allow create, update: if isSiteAdmin() || isClubAdmin();
        allow delete: if isSiteAdmin();
    }
  }
}
