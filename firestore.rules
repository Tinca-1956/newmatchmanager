rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function getUserRole(userId) {
      return getUserData(userId).role;
    }

    function isSiteAdmin(userId) {
      return getUserRole(userId) == 'Site Admin';
    }
    
    function isClubAdmin(userId) {
       return getUserRole(userId) == 'Club Admin';
    }

    function isClubAdminOrMarshal(userId) {
      let role = getUserRole(userId);
      return role == 'Club Admin' || role == 'Marshal';
    }
    
    function getUserPrimaryClubId(userId) {
      return getUserData(userId).primaryClubId;
    }

    // Allow site admins to do anything
    match /{document=**} {
      allow read, write: if isSiteAdmin(request.auth.uid);
    }

    // Users can read and update their own profile
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
    }

    // Any authenticated user can read public club and series info
    match /clubs/{clubId} {
        allow read: if request.auth.uid != null;
    }

    match /series/{seriesId} {
        allow read: if request.auth.uid != null;
        // Club Admins can create, update, and delete series for their club
        allow create, update, delete: if isClubAdmin(request.auth.uid) 
                           && request.resource.data.clubId == getUserPrimaryClubId(request.auth.uid);
    }
    
    match /matches/{matchId} {
      allow read: if request.auth.uid != null;
      
      // Club Admins/Marshals can create, update, and delete matches for their club
      allow create, update, delete: if isClubAdminOrMarshal(request.auth.uid) 
                         && request.resource.data.clubId == getUserPrimaryClubId(request.auth.uid);
      
      // Allow any authenticated user to register/unregister by updating only these fields
      allow update: if request.auth.uid != null 
                    && request.resource.data.keys().hasOnly(['registeredAnglers', 'registeredCount']);
    }

    match /results/{resultId} {
      allow read: if request.auth.uid != null;
      
      // Allow Club Admins/Marshals to create, update, and delete results for matches in their club
      allow create, update, delete: if isClubAdminOrMarshal(request.auth.uid) 
                         && get(/databases/$(database)/documents/matches/$(request.resource.data.matchId)).data.clubId == getUserPrimaryClubId(request.auth.uid);
    }
  }
}
