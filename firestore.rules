rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow admins to read/write all data for management purposes.
    // Allow any authenticated user to read from clubs, series, matches, and results.
    match /{path=**} {
       allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
    }

    // USERS
    // Allow users to view their own profile data.
    // Allow users to update their own profile data.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
    }

    // CLUBS
    // Allow any authenticated user to read club information.
    match /clubs/{clubId} {
      allow read: if request.auth != null;
    }

    // SERIES
    // Allow any authenticated user to read series information.
    match /series/{seriesId} {
      allow read: if request.auth != null;
    }
    
    // MATCHES
    // Allow any authenticated user to read match info.
    // Allow authenticated users to register/unregister by updating the registeredAnglers array.
    match /matches/{matchId} {
      allow read: if request.auth != null;
      allow update: if request.auth != null
                    && request.resource.data.diff(resource.data).affectedKeys()
                       .hasOnly(['registeredAnglers', 'registeredCount']);
    }

    // RESULTS
    // Allow any authenticated user to read results.
    match /results/{resultId} {
        allow read: if request.auth != null;
    }
  }
}
