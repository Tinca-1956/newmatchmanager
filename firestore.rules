rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }
    
    // PUBLIC COLLECTIONS
    // ==================
    // Allow anyone to read from public collections.
    match /clubs/{clubId} {
      allow read: if true;
      allow write: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.id;
    }
    match /publicMatches/{matchId} {
        allow read: if true;
    }
     match /publicUpcomingMatches/{matchId} {
        allow read: if true;
    }

    // USER-SPECIFIC & PROTECTED COLLECTIONS
    // =====================================
    // Users can only read/write their own user document.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Admins and authenticated users can read from these collections
    // based on specific query constraints enforced by the rules.
    match /series/{seriesId} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid != null; // Simplified for now
    }

    match /matches/{matchId} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid != null; // Simplified for now
    }

    match /results/{resultId} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid != null; // Simplified for now
    }
  }
}
