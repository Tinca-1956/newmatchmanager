
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rules for the 'clubs' collection
    match /clubs/{clubId} {
      // Any authenticated user can create, read, update, or delete a club document.
      allow read, write: if request.auth != null;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // A user can create their own user document.
      allow create: if request.auth != null && request.auth.uid == userId;
      // A user can read, update, or delete their own document.
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Fallback rule: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
