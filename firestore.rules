
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isSiteAdmin() {
        // Check for the claim directly on the token.
        return isSignedIn() && request.auth.token.role == 'Site Admin';
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    
    function isClubAdmin(clubId) {
      let userDoc = getUserData(request.auth.uid);
      return isSignedIn() && userDoc.primaryClubId == clubId && userDoc.role == 'Club Admin';
    }
    
    function isMemberOf(clubId) {
       let userDoc = getUserData(request.auth.uid);
       return isSignedIn() && userDoc.primaryClubId == clubId;
    }

    // Rules for 'users' collection
    match /users/{userId} {
      // Allow users to read their own profile
      // Allow Site Admins to read any user profile
      // Allow Club Admins to read profiles of users in their club
      allow read: if (isSignedIn() && request.auth.uid == userId) || 
                   isSiteAdmin() || 
                   (isClubAdmin(getUserData(request.auth.uid).primaryClubId) && getUserData(userId).primaryClubId == getUserData(request.auth.uid).primaryClubId);

      // Allow users to list other members of their own club
      allow list: if isSiteAdmin() || 
                   (isSignedIn() && isMemberOf(resource.data.primaryClubId));

      // Allow users to create their own profile upon signup
      allow create: if isSignedIn() && request.auth.uid == userId;

      // Allow users to update their own profile fields
      // Allow admins to update user roles/status
      allow update: if (isSignedIn() && request.auth.uid == userId) || isSiteAdmin() || isClubAdmin(resource.data.primaryClubId);

      // Only Site Admins can delete users (soft delete is an update)
      allow delete: if isSiteAdmin();
    }
    
    match /clubs/{clubId} {
      allow read: if isSignedIn();
      allow list: if isSignedIn();
      allow create, update, delete: if isSiteAdmin();
    }
    
    match /series/{seriesId} {
      allow read, list: if isSignedIn();
      allow create, update, delete: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId);
    }

    match /matches/{matchId} {
      allow read, list: if isSignedIn();
      allow create, update, delete: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId);
    }
    
    match /results/{resultId} {
      allow read, list: if isSignedIn();
      allow create, update, delete: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId) || 
                                     (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Marshal');
    }
  }
}
