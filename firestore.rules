
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions to check user roles from their auth token
    function isSiteAdmin() {
      return request.auth.token.role == 'Site Admin';
    }
    
    function isClubAdmin() {
      return request.auth.token.role == 'Club Admin';
    }

    // Check if the user is an admin of the club associated with the resource
    function isClubAdminOf(clubId) {
      return isClubAdmin() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == clubId;
    }

    // Allows a user to read their own profile
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isSiteAdmin() || isClubAdmin();
      allow create: if request.auth.uid == userId || request.auth.token.role in ['Site Admin', 'Club Admin'];
      allow update: if request.auth.uid == userId || isSiteAdmin() || isClubAdminOf(resource.data.primaryClubId);
      allow delete: if isSiteAdmin();
    }
    
    // Any authenticated user can read clubs, only admins can modify
    match /clubs/{clubId} {
      allow read: if request.auth != null;
      allow write: if isSiteAdmin();
    }
    
    // Any authenticated user can read series, only admins can modify
    match /series/{seriesId} {
       allow read: if request.auth != null;
       allow create: if isSiteAdmin() || isClubAdminOf(request.resource.data.clubId);
       allow update: if isSiteAdmin() || isClubAdminOf(resource.data.clubId);
       allow delete: if isSiteAdmin() || isClubAdminOf(resource.data.clubId);
    }

    // Matches can be read by any authenticated user.
    // Modifications are restricted to admins of the specific club.
    match /matches/{matchId} {
      allow read: if request.auth != null;
      allow create: if isSiteAdmin() || isClubAdminOf(request.resource.data.clubId);
      allow update: if isSiteAdmin() || isClubAdminOf(resource.data.clubId);
      allow delete: if isSiteAdmin() || isClubAdminOf(resource.data.clubId);
    }

    // Results can be read by any authenticated user.
    // Modifications are restricted to admins of the specific club.
    match /results/{resultId} {
      allow read: if request.auth != null;
      allow create: if isSiteAdmin() || isClubAdminOf(request.resource.data.clubId);
      allow update: if isSiteAdmin() || isClubAdminOf(resource.data.clubId);
      allow delete: if isSiteAdmin() || isClubAdminOf(resource.data.clubId);
    }
  }
}
