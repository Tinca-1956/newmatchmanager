
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions to reduce duplication
    function isSiteAdmin() {
      return request.auth != null && request.auth.token.role == 'Site Admin';
    }

    function isClubAdmin(clubId) {
      return request.auth != null && request.auth.token.role == 'Club Admin' && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == clubId;
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isSignedIn() {
      return request.auth != null;
    }

    // PUBLIC COLLECTIONS: Allow anyone to read these.
    match /clubs/{clubId} {
      allow read: true;
      allow write: if isSiteAdmin();
    }
    
    match /publicMatches/{matchId} {
      allow read: true;
      // Writes are handled by the publish function, which runs with admin privileges, 
      // but we add a rule for direct admin writes just in case.
      allow write: if isSiteAdmin() || isClubAdmin(resource.data.clubId);
    }
    
    match /publicUpcomingMatches/{matchId} {
        allow read: true;
        // This collection is written to by backend processes or admins.
        allow write: if isSiteAdmin() || isClubAdmin(resource.data.clubId);
    }

    // USER PROFILES
    match /users/{userId} {
      // Allow read access if the requester is the owner, a Site Admin,
      // or an admin of the same club.
      allow read: if isOwner(userId) || isSiteAdmin() || 
                    (isSignedIn() && 
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.primaryClubId);
      
      // Allow update only by the owner or a Site Admin.
      allow update: if isOwner(userId) || isSiteAdmin();
      
      // Allow create for any signed-in user (during registration/club selection).
      allow create: if isSignedIn();
      
      // Only Site Admins can delete user documents.
      allow delete: if isSiteAdmin();
    }
    
    // SERIES
    match /series/{seriesId} {
      // Any signed-in user can view series.
      allow read: if isSignedIn();
      // Only admins of the series' club can create/update/delete.
      allow write: if isSiteAdmin() || isClubAdmin(resource.data.clubId);
    }
    
    // MATCHES
    match /matches/{matchId} {
      // Any signed-in user can view matches.
      allow read: if isSignedIn();
      
      // Complex write: allow admins to do anything, allow users to register/unregister.
      allow write: if isSiteAdmin() || isClubAdmin(resource.data.clubId) || 
                   (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['registeredAnglers', 'registeredCount']));
    }
    
    // RESULTS
    match /results/{resultId} {
       // Any signed-in user can view results.
      allow read: if isSignedIn();
      // Only admins can write results.
      allow write: if isSiteAdmin() || isClubAdmin(resource.data.clubId);
    }
  }
}
