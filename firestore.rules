rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // PUBLIC-ACCESS COLLECTIONS
    // =================================================
    // Anyone can read these collections, even unauthenticated users.
    // Writes are disallowed from the client.
    
    match /clubs/{clubId} {
      allow read: if true;
      allow write: if request.auth.token.role == 'Site Admin';
    }
    
    match /publicMatches/{matchId} {
      allow read: if true;
      allow write: if request.auth.token.role == 'Site Admin' || request.auth.token.role == 'Club Admin';
    }

    match /publicUpcomingMatches/{matchId} {
        allow read: if true;
        allow write: if request.auth.token.role == 'Site Admin' || request.auth.token.role == 'Club Admin';
    }

    // AUTHENTICATED-ONLY COLLECTIONS
    // =================================================
    // Users must be logged in to interact with these collections,
    // according to the specific rules defined for each.
    
    // Users Collection
    // Site Admins can list users ONLY if filtering by 'Deleted' status.
    // Users can read any profile, but only write/delete their own or be written/deleted by an Admin.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow list: if request.auth.token.role == 'Site Admin' && request.query.resource.data.memberStatus == 'Deleted';
      allow write: if request.auth.uid == userId || request.auth.token.role == 'Site Admin' || request.auth.token.role == 'Club Admin';
      allow delete: if request.auth.token.role == 'Site Admin';
    }
    
    // Series Collection
    // Any authenticated user can read series data.
    // Only Admins can create or modify a series.
    match /series/{seriesId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.role == 'Site Admin' || request.auth.token.role == 'Club Admin';
      allow delete: if request.auth.token.role == 'Site Admin';
    }

    // Matches Collection
    // Any authenticated user can read match data.
    // Only Admins or Marshals can modify a match (e.g., for weigh-in).
    match /matches/{matchId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.role == 'Site Admin' 
                  || request.auth.token.role == 'Club Admin'
                  || request.auth.token.role == 'Marshal';
    }
    
    // Results Collection
    // Any authenticated user can read results.
    // Only Admins or Marshals can create or modify results.
    match /results/{resultId} {
       allow read: if request.auth != null;
       allow write: if request.auth.token.role == 'Site Admin' 
                  || request.auth.token.role == 'Club Admin'
                  || request.auth.token.role == 'Marshal';
    }
  }
}
