
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSiteAdmin() {
      return request.auth.token.role == 'Site Admin';
    }
    
    function isClubAdmin() {
      return request.auth.token.role == 'Club Admin';
    }

    function isMarshal() {
        return request.auth.token.role == 'Marshal';
    }
    
    function isAngler() {
      return request.auth.token.role == 'Angler';
    }
    
    function isSignedIn() {
      return request.auth != null;
    }

    // Security rules for the 'users' collection
    match /users/{userId} {
      // Let any signed-in user read their own document
      allow read: if isSignedIn() && request.auth.uid == userId;
      // Allow Site Admins to read any user document
      allow get: if isSiteAdmin();

      // Allow users to create their own document on signup OR Admins to create new users
      allow create: if (isSignedIn() && request.auth.uid == userId) || isSiteAdmin() || isClubAdmin();

      // Allow users to update their own document
      allow update: if isSignedIn() && request.auth.uid == userId;
      // Allow Site Admins and Club Admins to update user documents
      allow update: if isSiteAdmin() || isClubAdmin();
      // Allow site admins to delete users
      allow delete: if isSiteAdmin();
    }
    
    match /users/{document=**} {
    	allow list: if isSiteAdmin() || (isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && resource.data.primaryClubId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId);
    }

    // Security rules for the 'clubs' collection
    match /clubs/{clubId} {
      allow read: if isSignedIn();
      allow write: if isSiteAdmin(); // Only Site Admins can create/edit/delete clubs
    }

    // Security rules for the 'series' collection
    match /series/{seriesId} {
        allow read: if isSignedIn();
        allow write: if isSiteAdmin() || isClubAdmin();
    }
    
    // Security rules for the 'matches' collection
    match /matches/{matchId} {
        allow read: if isSignedIn();
        allow write: if isSiteAdmin() || isClubAdmin() || isMarshal();
    }
    
    // Security rules for the 'results' collection
    match /results/{resultId} {
        allow read: if isSignedIn();
        allow write: if isSiteAdmin() || isClubAdmin() || isMarshal();
    }
  }
}
