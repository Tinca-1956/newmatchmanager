
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSiteAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }
    
    function isClubAdmin() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Allow read access to public collections for any user
    match /publicMatches/{matchId} {
        allow read: if true;
    }
    match /publicUpcomingMatches/{matchId} {
        allow read: if true;
    }

    // Allow any authenticated user to read from clubs collection
    // Allow Site Admins or the correct Club Admin to write
    match /clubs/{clubId} {
      allow read: if request.auth != null;
      allow write: if isSiteAdmin() || (isClubAdmin() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == clubId);
    }

    // Users can read/update their own profile.
    // Admins can read any user profile.
    // Admins can update users in their own club.
    match /users/{userId} {
      allow read: if isOwner(userId) || isSiteAdmin() || isClubAdmin();
      allow update: if isOwner(userId) || isSiteAdmin() || 
                    (isClubAdmin() && get(/databases/$(database)/documents/users/$(userId)).data.primaryClubId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId);
      allow create: if request.auth != null; // Allow any authenticated user to create their own user doc (on first login)
      allow delete: if isSiteAdmin();
    }
    
    // Series, Matches, Results, Standard Texts
    match /{collection}/{docId} {
       allow read: if request.auth != null;
       allow write: if isSiteAdmin() || isClubAdmin();
    }

    // Help Documents can be read by anyone authenticated.
    match /helpDocuments/{docId} {
        allow read: if request.auth != null;
        allow write: if isSiteAdmin() || isClubAdmin();
    }
  }
}
