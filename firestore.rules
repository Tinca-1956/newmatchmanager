
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions
    function isAuth() {
      return request.auth != null;
    }

    function isUser(uid) {
      return isAuth() && request.auth.uid == uid;
    }
    
    function isAdmin() {
      return request.auth.token.role == 'Site Admin' || request.auth.token.role == 'Club Admin';
    }

    function isSiteAdmin() {
      return request.auth.token.role == 'Site Admin';
    }
    
    // Matches Collection
    match /matches/{matchId} {
      // Anyone can view a match
      allow read: if isAuth();
      
      // Only admins can create or update matches
      allow create, update: if isAdmin();
    }
    
    // Results Collection
    match /results/{resultId} {
        // Anyone can view results
        allow read: if isAuth();
        
        // Admins and marshals can create/update results
        allow write: if isAdmin() || request.auth.token.role == 'Marshal';
    }
    
    // Series Collection
    match /series/{seriesId} {
      // Anyone can view series
      allow read: if isAuth();
      
      // Only admins can create or update series
      allow create, update, delete: if isAdmin();
    }
    
    // Users Collection
    match /users/{userId} {
      // Allow a user to read their own document.
      allow get: if isUser(userId);
      
      // Allow any authenticated user to list users (for members pages)
      allow list: if isAuth();

      // New users can create their own document
      allow create: if isUser(userId);

      // Users can update their own document, or an admin can update any document
      allow update: if isUser(userId) || isAdmin();
      
      // Only Site Admins can delete user documents
      allow delete: if isSiteAdmin();
    }
    
    // Clubs Collection
    match /clubs/{clubId} {
      // Allow any authenticated user to read club information
      allow read: if isAuth();

      // Only Site Admins can create or edit clubs
      allow write: if isSiteAdmin();
    }
  }
}
