
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // --- UTILITIES ---
    // Allow reading of public data.
    match /publicMatches/{matchId} {
      allow read;
    }
     match /publicUpcomingMatches/{matchId} {
      allow read;
    }
     match /publicBlogPosts/{postId} {
      allow read;
    }

    // --- MAIN COLLECTIONS ---
    match /users/{userId} {
      // Allow users to read their own profile, and allow admins to read all profiles.
      allow read: if request.auth.uid == userId ||
                  get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin' ||
                  (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin' &&
                  get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.primaryClubId);
      
      // Allow users to create their own profile during signup/club selection
      // Allow Site Admins to create users (e.g. for seeding)
      allow create: if request.auth.uid == userId ||
                  get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';

      // Allow users to update their own profile, or allow admins to update user profiles.
      allow update: if request.auth.uid == userId ||
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin' ||
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin';
                    
      // Allow only Site Admins to permanently delete user documents.
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }

    match /clubs/{clubId} {
      // Any authenticated user can read club data for selection lists.
      allow read: if request.auth.uid != null;

      // Allow only Site Admins to create, update, or delete clubs.
      // Club Admins can only update the description and imageUrl of their own club.
      allow create, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin' ||
                    (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin' &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == clubId &&
                     request.resource.data.keys().hasOnly(['description', 'imageUrl']));
    }

    match /series/{seriesId} {
      // Any user belonging to the club can read its series. Site Admins can read all.
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin' ||
                  get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.clubId;
      
      // Only Site Admins or Club Admins of the relevant club can write.
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin' ||
                  (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin' &&
                   get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.clubId);
    }

    match /matches/{matchId} {
      // Any user belonging to the club can read its matches. Site Admins can read all.
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin' ||
                  get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.clubId;
      
      // Allow creating/updating matches if user is a Site Admin or a Club Admin of that club.
      allow create, update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin' ||
                     (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin' &&
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == request.resource.data.clubId);
      
      // Allow deleting a match if the user is a Site Admin or Club Admin of that club.
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin' ||
                    (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin' &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.clubId);
    }
    
    match /results/{resultId} {
      // Any user belonging to the club can read its results. Site Admins can read all.
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin' ||
                  get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.clubId;

      // Allow writing results if user is Site Admin or a Club Admin of that club.
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin' ||
                   (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin' &&
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == request.resource.data.clubId);
    }

    match /blogs/{postId} {
      allow read: if request.auth.uid != null;
      allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin' || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin' && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == request.resource.data.clubId);

      match /comments/{commentId} {
        allow create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.memberStatus == 'Member' && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == get(/databases/$(database)/documents/blogs/$(postId)).data.clubId;
        allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == get(/databases/$(database)/documents/blogs/$(postId)).data.clubId;
      }
    }
    
     match /publicBlogPosts/{postId} {
        allow read;
        // Allow write if user is Site Admin or a Club Admin of the club that owns the original post.
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin' ||
                       (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin' &&
                        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == get(/databases/$(database)/documents/blogs/$(postId)).data.clubId);
    }

    match /Standard_Texts/{textId} {
        // Allow read/write if the user is a Site Admin OR if the user is an admin of the club the text belongs to.
        allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin' ||
                       (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin' &&
                        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.clubId);
    }
    
    match /notifications/{notificationId} {
        // Users can read their own notifications.
        allow read: if request.auth.uid == resource.data.userId;
        // Notifications are created by backend/server actions.
        allow write: if false;
    }
    
    match /tags/{tagId} {
        allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.clubId;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin' ||
                       (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin' &&
                        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == request.resource.data.clubId);
    }
    
    match /helpDocuments/{docId} {
      allow read: if request.auth.uid != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }

  }
}
