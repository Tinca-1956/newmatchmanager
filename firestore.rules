rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user belongs to a club
    function isClubMember(clubId) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == clubId;
    }

    match /users/{userId} {
      // Allow users to read/write their own document
      allow read, update: if request.auth.uid == userId;

      // Allow users to list other users in their own primary club
      allow list: if isClubMember(request.query.where.primaryClubId);
    }

    match /clubs/{clubId} {
      // Allow any authenticated user to read club information
      allow read: if request.auth != null;
      
      // Allow only site admins to create, update, or delete clubs
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }

    match /series/{seriesId} {
       // Allow any authenticated user to read series information
      allow read: if request.auth != null;

      // Allow site and club admins to write to series
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
    }

    match /matches/{matchId} {
      // Allow any authenticated user to read match data
      allow read: if request.auth != null;
      
      // Allow site and club admins to write to matches
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin'];
    }
    
    match /results/{resultId} {
        // Allow any authenticated user to read results
        allow read: if request.auth != null;

        // Allow site admins, club admins, and marshals to write results
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Site Admin', 'Club Admin', 'Marshal'];
    }
  }
}
