
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isSiteAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }

    // Rules for collections
    match /clubs/{clubId} {
      allow read: if true;
      allow write: if isSignedIn() && isSiteAdmin();
    }

    match /matches/{matchId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }
    
    match /results/{resultId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /series/{seriesId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && (isSiteAdmin() || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.clubId);
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      // Allow a user to update their own document, or a Site Admin to update any user document.
      allow write: if isSignedIn() && (request.auth.uid == userId || isSiteAdmin());
    }

    match /helpDocuments/{docId} {
      allow read: if true;
      allow write: if isSignedIn() && isSiteAdmin();
    }
    
    match /Standard_Texts/{textId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && isSiteAdmin();
    }

    match /publicMatches/{matchId} {
      allow read: if true;
      allow write: if isSignedIn() && isSiteAdmin();
    }

    match /publicUpcomingMatches/{matchId} {
        allow read: if true;
        allow write: if isSignedIn() && isSiteAdmin();
    }
  }
}
