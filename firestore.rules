rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users can read their own profile, admins can read any.
    match /users/{userId} {
      allow read: if isOwner(userId) || request.auth.token.role in ['Club Admin', 'Site Admin'];
      allow write: if isOwner(userId);
      allow create: if request.auth != null; // Any authenticated user can create their profile
    }

    // Public collections can be read by anyone
    match /publicMatches/{matchId} {
      allow read: if true;
    }
    
    match /publicUpcomingMatches/{matchId} {
        allow read: if true;
    }

    // Clubs can be listed by anyone, but only written to by admins
    match /clubs/{clubId} {
      allow list: if true;
      allow get: if request.auth != null;
      allow write: if request.auth.token.role in ['Site Admin'];
    }

    // Authenticated users can read matches, series, and results.
    // Writes are restricted to admins/marshals.
    match /matches/{matchId} {
        allow read: if request.auth != null;
        allow write: if request.auth.token.role in ['Club Admin', 'Site Admin', 'Marshal'];
    }
    
    match /series/{seriesId} {
        allow read: if request.auth != null;
        allow write: if request.auth.token.role in ['Club Admin', 'Site Admin'];
    }

    match /results/{resultId} {
        allow read: if request.auth != null;
        allow write: if request.auth.token.role in ['Club Admin', 'Site Admin', 'Marshal'];
    }
  }
}
