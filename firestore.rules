
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSiteAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }

    function isClubAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin';
    }

    // Allow read access to all clubs for any authenticated user.
    // Write access is restricted to Site Admins.
    match /clubs/{clubId} {
      allow read: if request.auth != null;
      allow write: if isSiteAdmin();
    }
    
    // Allow read access to all series for any authenticated user.
    // Write access is restricted to Site and Club Admins.
    match /series/{seriesId} {
        allow read: if request.auth != null;
        allow write: if isSiteAdmin() || isClubAdmin();
    }

    // Allow read access to all matches for any authenticated user.
    // Write access is restricted to Site and Club Admins.
    match /matches/{matchId} {
      allow read: if request.auth != null;
      allow write: if isSiteAdmin() || isClubAdmin();
    }
    
    // Allow read access to all results for any authenticated user.
    // Write access is restricted to Site and Club Admins.
    match /results/{resultId} {
        allow read: if request.auth != null;
        allow write: if isSiteAdmin() || isClubAdmin();
    }
    
    // USERS COLLECTION RULES
    match /users/{userId} {
      // READ: A user can read their own profile. An admin can read any profile.
      allow read: if request.auth.uid == userId 
                  || request.auth.token.role in ['Site Admin', 'Club Admin'];
                  
      // CREATE: A user can create their own profile. An admin can create any user profile.
      allow create: if request.auth.uid == userId 
                    || request.auth.token.role in ['Site Admin', 'Club Admin'];
                    
      // UPDATE: A user can update their own profile. An admin can update any profile.
      allow update: if request.auth.uid == userId
                    || request.auth.token.role in ['Site Admin', 'Club Admin'];

      // DELETE: Only a Site Admin can delete a user document.
      allow delete: if request.auth.token.role == 'Site Admin';
    }
  }
}
