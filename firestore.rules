rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isSiteAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }
    
    function isClubAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin';
    }

    function isOwnClub(clubId) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == clubId;
    }
    
    // Allow any authenticated user to read from public collections
    match /publicUpcomingMatches/{matchId} {
        allow read: if request.auth != null;
    }
    match /publicMatches/{matchId} {
        allow read: if request.auth != null;
    }
    
    // Allow any authenticated user to read from clubs
    match /clubs/{clubId} {
      // Any authenticated user can read club data.
      allow read: if request.auth != null;
      // Only Site Admins can create/delete clubs.
      // A Club Admin can update their own club.
      allow write: if isSiteAdmin() || (isClubAdmin() && isOwnClub(clubId));
    }

    // Full access for authenticated users for these collections
    match /matches/{matchId} {
        allow read, write: if request.auth != null;
    }
    match /results/{resultId} {
      allow read, write: if request.auth != null;
    }
    match /series/{seriesId} {
      allow read, write: if request.auth != null;
    }
    
    match /helpDocuments/{docId} {
      allow read: if request.auth != null;
      allow write: if isSiteAdmin();
    }
    
    match /Standard_Texts/{textId} {
        allow read, write: if request.auth != null;
    }

    match /users/{userId} {
      // Any authenticated user can read their own profile.
      // Admins can read any profile.
      allow get: if request.auth.uid == userId || isSiteAdmin() || isClubAdmin();
      // Any authenticated user can update their own profile.
      allow update: if request.auth.uid == userId || isSiteAdmin() || isClubAdmin();
      // Site admins can read the full list of users for management.
      allow list: if isSiteAdmin() || isClubAdmin();
      // Any authenticated user can create their own user document upon first sign-in.
      allow create: if request.auth.uid == userId;
    }
  }
}
