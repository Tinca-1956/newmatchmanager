rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isSiteAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }

    function isClubAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin';
    }
    
    function isClubAdminForRequest(clubId) {
      return isClubAdmin() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == clubId;
    }

    function isMemberOfRequestClub(clubId) {
        return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == clubId;
    }
    
    match /users/{userId} {
      allow read: if request.auth.uid == userId 
                || isSiteAdmin()
                || (isClubAdmin() && request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.primaryClubId);
      allow create: if request.auth.uid != null;
      allow update: if request.auth.uid == userId || isSiteAdmin() || isClubAdminForRequest(resource.data.primaryClubId);
      allow delete: if isSiteAdmin();
    }
    
    match /clubs/{clubId} {
      allow read: if true;
      allow create, update, delete: if isSiteAdmin();
    }
    
    match /series/{seriesId} {
        allow read: if request.auth.uid != null && isMemberOfRequestClub(resource.data.clubId);
        allow create, update, delete: if isSiteAdmin() || isClubAdminForRequest(request.resource.data.clubId);
    }
    
    match /matches/{matchId} {
      allow read: if request.auth.uid != null && isMemberOfRequestClub(resource.data.clubId);
      allow create, delete: if isSiteAdmin() || isClubAdminForRequest(request.resource.data.clubId);
      allow update: if isSiteAdmin() || isClubAdminForRequest(request.resource.data.clubId);
    }
    
    match /results/{resultId} {
        allow read: if request.auth.uid != null && isMemberOfRequestClub(resource.data.clubId);
        allow create, update, delete: if isSiteAdmin() || isClubAdminForRequest(request.resource.data.clubId);
    }

    match /helpDocuments/{docId} {
        allow read: if true;
        allow create, update, delete: if isSiteAdmin();
    }
    
    match /Standard_Texts/{textId} {
        allow read, write: if isSiteAdmin() || isClubAdminForRequest(request.resource.data.clubId);
    }

    match /publicMatches/{matchId} {
        allow read: if true;
        allow write: if isSiteAdmin() || isClubAdminForRequest(request.resource.data.clubId);
    }
    
     match /publicUpcomingMatches/{matchId} {
        allow read: if true;
        allow write: if isSiteAdmin() || isClubAdminForRequest(request.resource.data.clubId);
    }
  }
}
