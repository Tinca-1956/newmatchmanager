rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for files within any match's folder
    match /matches/{matchId}/{allPaths=**} {
      // Allow anyone to read match images (e.g., for viewing galleries)
      allow read;

      // Allow write (create, update, delete) operations only if the user is
      // an authenticated Site Admin or Club Admin.
      // This rule checks the custom claim set on the user's auth token.
      allow write: if request.auth != null &&
                      (request.auth.token.role == 'Site Admin' || request.auth.token.role == 'Club Admin');
    }
  }
}
