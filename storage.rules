rules_version = '2';

// Caution: This is a permissive rule for development.
// In a production environment, you should restrict origins
// to your actual app's domain.
// e.g. `if request.origin.matches('https://your-app-name.web.app')`
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This is common for files like public images (e.g., club logos).
    match /{allPaths=**} {
      allow read;
      allow write: if request.auth != null; // Only authenticated users can write
    }
  }
}
