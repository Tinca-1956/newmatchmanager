rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check the user's custom claim
    function hasAdminRole() {
      return request.auth.token.role == 'Site Admin' || request.auth.token.role == 'Club Admin';
    }

    match /matches/{matchId}/{allPaths=**} {
      // Anyone can read match images
      allow read: if true;
      
      // Only users with an 'Site Admin' or 'Club Admin' role in their auth token can write (upload/delete)
      allow write: if request.auth != null && hasAdminRole();
    }
  }
}
