rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Grant read access to everyone for all files
    match /{allPaths=**} {
      allow read;
    }
    
    // Grant write access only on files within the 'matches' folder
    // to any user that is authenticated.
    match /matches/{matchId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
