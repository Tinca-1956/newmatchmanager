
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isSiteAdmin() {
      return isSignedIn() && getUserData().role == 'Site Admin';
    }
    
    function isClubAdmin() {
       return isSignedIn() && getUserData().role == 'Club Admin';
    }
    
    // USERS
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isUser(userId);
      allow update: if isUser(userId) || isSiteAdmin();
      allow delete: if isSiteAdmin();
    }
    
    // CLUBS
    match /clubs/{clubId} {
      allow read: if isSignedIn();
      allow create, update: if isSiteAdmin();
      allow delete: if isSiteAdmin();
    }

    // SERIES
    match /series/{seriesId} {
       allow read: if isSignedIn();
       allow create, update, delete: if isSiteAdmin() || (isClubAdmin() && resource.data.clubId == getUserData().primaryClubId);
    }
    
    // MATCHES
    match /matches/{matchId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }
    
    // RESULTS
    match /results/{resultId} {
      allow read: if isSignedIn();
      allow write: if isSiteAdmin() || (isClubAdmin() && resource.data.clubId == getUserData().primaryClubId);
    }

    // Standard Texts
    match /Standard_Texts/{textId} {
       allow read: if isSignedIn();
       allow write: if isSiteAdmin() || isClubAdmin();
    }

    // Help Documents
    match /helpDocuments/{docId} {
      allow read: if isSignedIn();
      allow write: if isSiteAdmin();
    }
    
    // Public collections
    match /publicMatches/{matchId} {
        allow read: if true;
        allow write: if false; // Should only be written from backend/admin
    }
    
    match /publicUpcomingMatches/{matchId} {
        allow read: if true;
        allow write: if false; // Should only be written from backend/admin
    }
  }
}
