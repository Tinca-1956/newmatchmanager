rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    // Explicitly allow public read access to these collections
    match /publicMatches/{matchId} {
      allow read: if true;
      allow write: if false; // Nobody can write directly here
    }
    
    match /publicUpcomingMatches/{matchId} {
      allow read: if true;
      allow write: if false; // Nobody can write directly here
    }

    match /clubs/{clubId} {
      allow read: if true; // All users can see club details
      allow create, update, delete: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }

    match /series/{seriesId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isSignedIn() && 
          (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin' || 
          (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin' && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.clubId));
    }

    match /matches/{matchId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && 
          (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin' || 
          (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin' && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == request.resource.data.clubId));
          
      // This is the corrected rule.
      allow update: if isSignedIn() &&
          (
            // Site Admins can update any match
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin'
            ||
            // Club Admins can update matches in their own club
            (
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin' &&
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.clubId
            )
             ||
            // Any signed-in user can update the registeredAnglers array, but only to add/remove themselves
            (
              request.resource.data.diff(resource.data).affectedKeys().hasOnly(['registeredAnglers', 'registeredCount']) &&
              (
                request.resource.data.registeredAnglers.size() == resource.data.registeredAnglers.size() + 1 &&
                request.auth.uid in request.resource.data.registeredAnglers
              ) ||
              (
                 request.resource.data.registeredAnglers.size() == resource.data.registeredAnglers.size() - 1 &&
                 ! (request.auth.uid in request.resource.data.registeredAnglers)
              )
            )
          );

      allow delete: if isSignedIn() && 
          (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin' || 
          (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin' && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.clubId));
    }

    match /results/{resultId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && 
          (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin' || 
          (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin' && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == request.resource.data.clubId) ||
           get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Marshal');
    }

    match /helpDocuments/{docId} {
      allow read: if true;
      allow write: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }
  }
}
