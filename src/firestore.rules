rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads/writes
    match /{document=**} {
      allow read, write: if false;
    }

    function isSignedIn() {
      return request.auth != null;
    }

    //
    // Matches rules - wide open for any logged-in user to test
    //
    match /matches/{matchId} {
      allow read, write: if isSignedIn();
    }
    
    match /publicMatches/{matchId} {
      allow read: if true;
      allow write: if false; // Should only be written by backend functions
    }
    
    match /publicUpcomingMatches/{matchId} {
        allow read: if true;
        allow write: if false; // Should only be written by backend functions
    }

    //
    // Results can be read by anyone if they know the matchId
    //
    match /results/{resultId} {
      allow read, write: if isSignedIn();
    }

    //
    // Users collection rules
    //
    match /users/{userId} {
      // Users can read their own profile
      allow read, update: if request.auth.uid == userId;
      
      // Site Admins can do anything
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
      
      // Club Admins can read any user in their own club
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin'
                  && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.primaryClubId;
    }

    //
    // Clubs can be read by any signed-in user
    //
    match /clubs/{clubId} {
      allow read: if isSignedIn();
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }

    //
    // Series can be read by any signed-in user
    //
    match /series/{seriesId} {
      allow read: if isSignedIn();
       allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin'
                  || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin' 
                  && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.primaryClubId == resource.data.clubId);
    }
    
    match /helpDocuments/{docId} {
      allow read: if isSignedIn();
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }
    
    match /Standard_Texts/{textId} {
       allow read: if isSignedIn();
       allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Club Admin' 
                  || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Site Admin';
    }
  }
}