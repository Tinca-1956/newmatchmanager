rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper Functions
    function isAuth() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserData(userId) {
        return get(/databases/$(database)/documents/users/$(userId)).data
    }

    function isSiteAdmin() {
      return isAuth() && getUserData(request.auth.uid).role == 'Site Admin';
    }
    
    function isClubAdmin(clubId) {
       return isAuth() && getUserData(request.auth.uid).role == 'Club Admin' && getUserData(request.auth.uid).primaryClubId == clubId
    }
    
    // USERS
    // Users can be read by any authenticated user.
    // Users can only be created by themselves (on signup).
    // An admin of the user's club can update their status or role.
    // Site admins can do anything.
    match /users/{userId} {
      allow read: if isAuth();
      allow create: if isOwner(userId) || isSiteAdmin() || isClubAdmin(request.resource.data.primaryClubId);
      allow update: if isOwner(userId) || isSiteAdmin() || isClubAdmin(resource.data.primaryClubId);
      allow delete: if isSiteAdmin();
    }
    
    // CLUBS
    // Clubs can be read by any authenticated user.
    // Only a site admin can create, update or delete clubs.
    match /clubs/{clubId} {
      allow read: if isAuth();
      allow create, update, delete: if isSiteAdmin();
    }
    
    // SERIES
    // Series can be read by any authenticated user.
    // Only an admin of that club or a site admin can CUD.
     match /series/{seriesId} {
      allow read: if isAuth();
      allow create, update, delete: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId);
    }
    
    // MATCHES
    // Matches can be read by any authenticated user.
    // Only an admin of that club or a site admin can CUD.
    match /matches/{matchId} {
        allow read: if isAuth();
        allow create: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId);
        allow update: if isSiteAdmin() || isClubAdmin(resource.data.clubId);
        allow delete: if isSiteAdmin() || isClubAdmin(resource.data.clubId);
    }
    
    // RESULTS
    // Results can be read by any authenticated user.
    // Only an admin of that club or a site admin can CUD.
    match /results/{resultId} {
        allow read: if isAuth();
        allow create, update, delete: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId);
    }
  }
}
