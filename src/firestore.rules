
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isSiteAdmin() {
      return isSignedIn() && getUserData().role == 'Site Admin';
    }
    
    function isClubAdmin(clubId) {
      return isSignedIn() && getUserData().role == 'Club Admin' && getUserData().primaryClubId == clubId;
    }
    
    function isMemberOfClub(clubId) {
      return isSignedIn() && getUserData().primaryClubId == clubId;
    }

    // PUBLIC collections
    match /clubs/{clubId} {
        allow read: if true; // Anyone can read club info
        allow write: if isSiteAdmin();
    }
    
    match /publicMatches/{matchId} {
        allow read: if true;
        allow write: if isSiteAdmin();
    }

    match /publicUpcomingMatches/{matchId} {
      allow read: if true;
      allow write: if isSiteAdmin();
    }
    
    // SECURED collections
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn(); // User can create their own profile doc
      allow update: if isUser(userId) || isSiteAdmin();
      allow delete: if isSiteAdmin();
    }
    
    match /series/{seriesId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId);
    }

    match /matches/{matchId} {
        allow read: if isSignedIn();
        allow create, update: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId);
        allow delete: if isSiteAdmin();
    }
    
    match /results/{resultId} {
        allow read: if isSignedIn() && (isSiteAdmin() || isMemberOfClub(get(/databases/$(database)/documents/matches/$(resource.data.matchId)).data.clubId));
        allow write: if isSiteAdmin() || isClubAdmin(request.resource.data.clubId);
    }

    // Help documents are public to read, but only admin can write
    match /helpDocuments/{docId} {
        allow read: if isSignedIn();
        allow write: if isSiteAdmin();
    }
  }
}
